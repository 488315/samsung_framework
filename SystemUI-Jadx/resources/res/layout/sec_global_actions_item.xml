<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/sec_global_actions_icon_label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:gravity="center"
            android:id="@+id/sec_global_actions_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="center"/>
        <TextView
            android:textSize="15sp"
            android:textColor="#fffafafa"
            android:gravity="center"
            android:id="@+id/sec_global_actions_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:importantForAccessibility="no"
            android:fontFamily="sec"
            android:textFontWeight="400"/>
    </LinearLayout>
    <TextView
        android:textSize="13sp"
        android:textColor="#b2fafafa"
        android:gravity="center"
        android:id="@+id/sec_global_actions_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:fontFamily="roboto-regular"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/sec_global_actions_description"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:importantForAccessibility="no">
        <TextView
            android:textSize="13sp"
            android:gravity="center"
            android:id="@+id/sec_global_actions_description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.6"
            android:fontFamily="sec"
            android:textFontWeight="400"/>
    </LinearLayout>
</LinearLayout>
