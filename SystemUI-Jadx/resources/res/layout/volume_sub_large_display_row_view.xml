<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.volume.view.subscreen.simple.SubLargeDisplayVolumeRowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sub_display_volume_view"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/sub_display_dual_volume_icon_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">
            <TextView
                android:textSize="21sp"
                android:textColor="@color/sub_large_display_volume_icon_color"
                android:ellipsize="marquee"
                android:id="@+id/volume_row_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:singleLine="true"
                android:fontFamily="sec-roboto-regular"/>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/volume_seekbar_container"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/sub_volume_panel_captured_blur"
                android:background="@drawable/sub_volume_seekbar_bg_blur"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/volume_sub_large_display_seek_bar_height"/>
            <FrameLayout
                android:layout_gravity="center"
                android:id="@+id/volume_seekbar_background"
                android:background="@drawable/sub_volume_seekbar_bg_blur"
                android:layout_width="match_parent"
                android:layout_height="@dimen/volume_sub_large_display_seek_bar_height"
                android:outlineProvider="background">
                <com.android.systemui.volume.view.VolumeSeekBar
                    android:id="@+id/volume_row_slider"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/volume_sub_large_display_seek_bar_height"
                    android:progressDrawable="@drawable/sub_display_volume_seekbar_drawable"
                    android:thumb="@null"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_gravity="center"
                android:id="@+id/volume_seekbar_outline_stroke"
                android:background="@drawable/sub_display_volume_seekbar_bg_outline"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/volume_sub_large_display_seek_bar_height"/>
            <com.android.systemui.volume.view.icon.VolumeIcon
                android:layout_gravity="start|center_vertical"
                android:id="@+id/volume_row_icon"
                android:background="@null"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:layout_marginStart="7dp"/>
        </FrameLayout>
    </LinearLayout>
</com.android.systemui.volume.view.subscreen.simple.SubLargeDisplayVolumeRowView>
