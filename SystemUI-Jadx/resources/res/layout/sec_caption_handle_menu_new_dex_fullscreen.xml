<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/handle_menu"
    android:background="@drawable/sec_decor_caption_menu_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.android.wm.shell.windowdecor.WindowMenuItemView
            android:id="@+id/minimize_window"
            android:padding="@dimen/decor_button_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sec_decor_button_minimize_desktop"
            android:contentDescription="@string/sec_decor_button_text_minimize"
            android:paddingStart="@dimen/decor_button_padding_large"/>
        <com.android.wm.shell.windowdecor.WindowMenuItemView
            android:id="@+id/split_window"
            android:padding="@dimen/decor_button_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sec_decor_button_split_leftright"
            android:contentDescription="@string/sec_decor_button_text_split"/>
        <com.android.wm.shell.windowdecor.WindowMenuItemView
            android:id="@+id/freeform_window"
            android:padding="@dimen/decor_button_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sec_decor_button_freeform"
            android:contentDescription="@string/sec_decor_button_text_freeform"/>
        <com.android.wm.shell.windowdecor.WindowMenuItemView
            android:id="@+id/close_window"
            android:padding="@dimen/decor_button_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sec_decor_button_close"
            android:contentDescription="@string/sec_decor_button_text_close"
            android:paddingEnd="@dimen/decor_button_padding_large"/>
    </LinearLayout>
</FrameLayout>
