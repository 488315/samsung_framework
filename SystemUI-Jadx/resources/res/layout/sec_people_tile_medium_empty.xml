<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@android:style/Theme.DeviceDefault.DayNight"
    android:orientation="vertical"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/people_widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/widget_main_content_padding_10dp"
        android:paddingVertical="@dimen/widget_main_content_padding_14dp">
        <FrameLayout
            android:layout_gravity="start|top"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/avatar_size_for_medium">
            <ImageView
                android:id="@+id/person_icon"
                android:layout_width="@dimen/avatar_size_for_medium"
                android:layout_height="@dimen/avatar_size_for_medium"/>
            <ImageView
                android:layout_gravity="end|top"
                android:id="@+id/availability"
                android:background="@drawable/availability_dot_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="top"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/PeopleWidgetName"
                android:textSize="@dimen/empty_name_text_size_for_medium"
                android:textColor="?android:attr/textColorPrimary"
                android:ellipsize="end"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_user_name"
                android:maxLines="1"/>
            <TextView
                android:textAppearance="@style/PeopleWidgetContent"
                android:textSize="@dimen/content_text_size_for_medium"
                android:textColor="?android:attr/textColorSecondary"
                android:ellipsize="end"
                android:id="@+id/last_interaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_status"
                android:maxLines="3"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
