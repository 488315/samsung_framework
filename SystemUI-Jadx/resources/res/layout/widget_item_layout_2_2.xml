<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:id="@+id/app_item"
    android:layout_width="@dimen/widget_launcher_2_2_item_icon_badge_frame_size"
    android:layout_height="@dimen/widget_launcher_2_2_item_icon_badge_frame_size"
    android:layout_marginLeft="@dimen/widget_launcher_2_2_item_left_right_margin"
    android:layout_marginRight="@dimen/widget_launcher_2_2_item_left_right_margin">
    <ImageView
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/app_icon"
        android:layout_width="@dimen/widget_launcher_2_2_item_icon_size"
        android:layout_height="@dimen/widget_launcher_2_2_item_icon_size"/>
    <TextView
        android:textSize="@dimen/widget_launcher_2_2_item_icon_badge_text_size"
        android:textColor="@color/cover_launcher_widget_icon_badge_text_color"
        android:gravity="center"
        android:layout_gravity="end|top"
        android:id="@+id/app_icon_badge"
        android:background="@drawable/app_icon_badge_bg_2_2"
        android:paddingLeft="@dimen/widget_launcher_2_2_item_left_right_padding"
        android:paddingRight="@dimen/widget_launcher_2_2_item_left_right_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_launcher_2_2_item_icon_badge_size"
        android:minWidth="@dimen/widget_launcher_2_2_item_icon_badge_size"
        android:maxLines="1"
        android:importantForAccessibility="no"
        android:fontFamily="sec"
        android:textFontWeight="600"/>
    <TextView
        android:textSize="@dimen/widget_launcher_2_2_item_icon_badge_text_size"
        android:textColor="@color/cover_launcher_widget_icon_badge_text_color"
        android:gravity="center"
        android:layout_gravity="end|top"
        android:id="@+id/app_icon_badge_two_number"
        android:background="@drawable/app_icon_badge_bg_2_2"
        android:paddingLeft="@dimen/widget_launcher_2_2_item_left_right_padding"
        android:paddingRight="@dimen/widget_launcher_2_2_item_left_right_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_launcher_2_2_item_icon_badge_size"
        android:minWidth="@dimen/widget_launcher_2_2_item_icon_badge_two_number_size"
        android:maxLines="1"
        android:importantForAccessibility="no"
        android:fontFamily="sec"
        android:textFontWeight="600"/>
    <TextView
        android:textSize="@dimen/widget_launcher_2_2_item_icon_badge_text_size"
        android:textColor="@color/cover_launcher_widget_icon_badge_text_color"
        android:gravity="center"
        android:layout_gravity="end|top"
        android:id="@+id/app_icon_badge_three_number"
        android:background="@drawable/app_icon_badge_bg_2_2"
        android:paddingLeft="@dimen/widget_launcher_2_2_item_left_right_padding"
        android:paddingRight="@dimen/widget_launcher_2_2_item_left_right_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_launcher_2_2_item_icon_badge_size"
        android:minWidth="@dimen/widget_launcher_2_2_item_icon_badge_three_number_size"
        android:maxLines="1"
        android:importantForAccessibility="no"
        android:fontFamily="sec"
        android:textFontWeight="600"/>
    <ImageView
        android:gravity="center"
        android:layout_gravity="end|top"
        android:id="@+id/app_icon_dot_badge"
        android:background="@drawable/app_icon_dot_badge_bg_2_2"
        android:visibility="gone"
        android:layout_width="@dimen/widget_launcher_2_2_item_icon_dot_badge_size"
        android:layout_height="@dimen/widget_launcher_2_2_item_icon_dot_badge_size"
        android:translationX="@dimen/widget_launcher_item_icon_dot_badge_translate_x"
        android:translationY="@dimen/widget_launcher_item_icon_dot_badge_translate_y"/>
</FrameLayout>
