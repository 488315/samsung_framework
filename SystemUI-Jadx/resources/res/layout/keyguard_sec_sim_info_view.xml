<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sysui="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom|center_horizontal"
    android:id="@+id/keyguard_sec_sim_info_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.android.systemui.widget.SystemUIImageView
        android:gravity="center"
        android:id="@+id/keyguard_sim_icon"
        android:layout_width="@dimen/kg_sim_pin_icon_size"
        android:layout_height="@dimen/kg_sim_pin_icon_size"
        android:src="@drawable/lock_ic_pin_attempt_sim"
        sysui:layout_constraintBottom_toBottomOf="parent"
        sysui:layout_constraintEnd_toStartOf="@+id/keyguard_sim_name"
        sysui:layout_constraintHorizontal_chainStyle="packed"
        sysui:layout_constraintStart_toStartOf="parent"
        sysui:layout_constraintTop_toTopOf="parent"
        sysui:originImage="lock_ic_pin_attempt_sim"
        sysui:themeBlackColor="theme_pin_digit_text_color_black"
        sysui:themeColor="theme_pin_digit_text_color"
        sysui:whitebgImage="lock_ic_pin_attempt_sim_whitebg"/>
    <com.android.systemui.widget.SystemUITextView
        android:textSize="@dimen/kg_sim_pin_name_font_size"
        android:gravity="center_vertical"
        android:id="@+id/keyguard_sim_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kg_sim_pin_icon_size"
        android:fontFamily="sec"
        android:layout_marginStart="@dimen/kg_sim_pin_name_start_margin"
        android:textFontWeight="400"
        sysui:layout_constraintBottom_toBottomOf="parent"
        sysui:layout_constraintEnd_toEndOf="parent"
        sysui:layout_constraintHorizontal_chainStyle="packed"
        sysui:layout_constraintStart_toEndOf="@+id/keyguard_sim_icon"
        sysui:layout_constraintTop_toTopOf="parent"
        sysui:layout_goneMarginStart="0dp"
        sysui:originColor="origin_keyguard_message_area_text_color"
        sysui:themeBlackColor="theme_pin_digit_text_color_black"
        sysui:themeColor="theme_pin_digit_text_color"
        sysui:whitebgColor="whitebg_keyguard_text_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>
