<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/ksh_subheader_text_color"
            android:id="@+id/ksh_subheader_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sec"
            android:paddingStart="24dp"
            android:textFontWeight="600"/>
        <View
            android:layout_gravity="center_vertical"
            android:background="@drawable/ksh_subheader_divider_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/ksh_list_divider_inset"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        android:id="@+id/ksh_info_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
