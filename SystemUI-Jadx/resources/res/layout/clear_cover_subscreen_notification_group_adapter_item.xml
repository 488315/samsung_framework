<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/clear_cover_subscreen_notification_list_type_item_background"
    android:paddingTop="6dp"
    android:paddingBottom="@dimen/clear_cover_subscreen_noti_list_item_layout_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/clear_cover_subscreen_noti_list_layout_item_between_margin"
    android:layout_marginHorizontal="@dimen/clear_cover_subscreen_noti_list_layout_margin">
    <TextView
        android:textSize="@dimen/clear_cover_subscreen_noti_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/subscreen_notification_text_color"
        android:ellipsize="end"
        android:id="@+id/subscreen_notification_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:fontFamily="roboto-medium"
        android:layout_marginHorizontal="@dimen/clear_cover_subscreen_noti_list_item_layout_margin"/>
    <TextView
        android:textSize="@dimen/clear_cover_subscreen_noti_content_text_size"
        android:textColor="@color/subscreen_notification_content_text_color"
        android:ellipsize="end"
        android:id="@+id/subscreen_notification_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:fontFamily="roboto-regular"
        android:layout_marginHorizontal="@dimen/clear_cover_subscreen_noti_list_item_layout_margin"/>
</LinearLayout>
