<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/sesl_appbar_scrolling_view_behavior">
    <com.android.systemui.controls.ui.view.CentralDescriptionView
        android:id="@+id/no_apps_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.android.systemui.shared.shadow.DoubleShadowTextView
                android:textAppearance="@style/TextAppearance.Font_Regular"
                android:textSize="17sp"
                android:textColor="@color/control_no_item_text_only"
                android:gravity="center"
                android:id="@+id/no_apps_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/controls_no_apps_selected"
                android:paddingHorizontal="@dimen/controls_no_apps_description_horizontal_margin"
                app:ambientShadowAlpha="0"
                app:ambientShadowBlur="@dimen/shadow_radius"
                app:ambientShadowOffsetX="@dimen/shadow_difference"
                app:ambientShadowOffsetY="@dimen/shadow_difference"
                app:keyShadowAlpha="0.2"
                app:keyShadowBlur="@dimen/shadow_radius"
                app:keyShadowOffsetX="@dimen/shadow_difference"
                app:keyShadowOffsetY="@dimen/shadow_difference"
                app:layout_constraintBottom_toTopOf="@+id/no_apps_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintWidth_percent="@dimen/controls_no_apps_description_width_percentage"/>
            <com.android.systemui.shared.shadow.DoubleShadowTextView
                android:textAppearance="@style/TextAppearance.Font_Regular"
                android:textSize="13sp"
                android:textColor="@color/control_no_item_text_only"
                android:gravity="center"
                android:id="@+id/no_apps_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/controls_no_apps_selected_description"
                android:paddingHorizontal="@dimen/controls_no_apps_description_horizontal_margin"
                app:ambientShadowAlpha="0"
                app:ambientShadowBlur="@dimen/shadow_radius"
                app:ambientShadowOffsetX="@dimen/shadow_difference"
                app:ambientShadowOffsetY="@dimen/shadow_difference"
                app:keyShadowAlpha="0.2"
                app:keyShadowBlur="@dimen/shadow_radius"
                app:keyShadowOffsetX="@dimen/shadow_difference"
                app:keyShadowOffsetY="@dimen/shadow_difference"
                app:layout_constraintBottom_toTopOf="@+id/manage_control_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/no_apps_title"
                app:layout_constraintWidth_percent="@dimen/controls_no_apps_description_width_percentage"/>
            <Button
                android:textAppearance="@style/TextAppearance.Font_Semi_Bold"
                android:textSize="17sp"
                android:textColor="@color/control_contained_button_text"
                android:id="@+id/manage_control_btn"
                android:layout_width="@dimen/controls_no_apps_description_width"
                android:layout_height="wrap_content"
                android:text="@string/controls_menu_manage_apps"
                android:layout_marginVertical="20dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/no_apps_description"
                app:layout_constraintWidth_percent="@dimen/controls_no_apps_description_width_percentage"
                style="@style/ControlContainedButton"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.android.systemui.controls.ui.view.CentralDescriptionView>
</androidx.core.widget.NestedScrollView>
