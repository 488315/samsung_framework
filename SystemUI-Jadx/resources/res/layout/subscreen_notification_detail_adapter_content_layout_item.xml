<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/subscreen_noti_detail_content_text_size"
            android:textStyle="bold"
            android:textColor="@color/subscreen_notification_text_color"
            android:id="@+id/detail_sender_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="roboto-regular"/>
        <TextView
            android:textSize="@dimen/subscreen_noti_detail_content_text_size"
            android:textColor="@color/subscreen_notification_content_text_color"
            android:id="@+id/detail_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto-regular"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/detail_content_image"
            android:background="@drawable/subscreen_notification_detail_content_image_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:clipToOutline="true"/>
        <DateTimeView
            android:textSize="@dimen/subscreen_noti_detail_content_clock_text_size"
            android:textColor="#999999"
            android:id="@+id/detail_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="roboto-regular"/>
    </LinearLayout>
</LinearLayout>
