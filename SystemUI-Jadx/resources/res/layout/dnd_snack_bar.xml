<?xml version="1.0" encoding="utf-8"?>
<com.android.wm.shell.common.DnDSnackBarWindow xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:id="@+id/snack_bar"
    android:background="@drawable/dnd_snack_bar_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="64dp"
    android:minHeight="44dp">
    <TextView
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textSize="16sp"
        android:textColor="#fafafa"
        android:layout_gravity="center_vertical"
        android:id="@+id/snack_bar_content"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/multi_window_view_for_all_apps_in_labs"
        android:fontFamily="roboto"/>
    <TextView
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#3e91ff"
        android:layout_gravity="end|bottom"
        android:id="@+id/snack_bar_button"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="12dp"
        android:text="@string/go_to_labs"
        android:fontFamily="roboto-medium"
        android:textAlignment="center"/>
</com.android.wm.shell.common.DnDSnackBarWindow>
