<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="@dimen/letterbox_education_dialog_action_width"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/letterbox_education_dialog_action_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Toolbar.Title"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/letterbox_education_dialog_action_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:fontFamily="@android:string/eventTypeAnniversary"
        android:textAlignment="center"/>
</LinearLayout>
