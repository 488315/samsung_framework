<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.controls.ui.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/control_custom_background_ripple"
    android:padding="@dimen/control_custom_padding"
    android:focusable="true"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@anim/control_state_list_animator"
    android:layout_marginHorizontal="@dimen/control_base_item_side_margin"
    android:screenReaderFocusable="true">
    <ImageView
        android:id="@+id/icon"
        android:padding="@dimen/control_custom_icon_padding_size"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="@dimen/control_custom_icon_size"
        android:layout_height="@dimen/control_custom_icon_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/overlay_custom_icon"
        android:focusable="false"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="@dimen/control_custom_icon_size"
        android:layout_height="@dimen/control_custom_icon_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <ViewStub
        android:id="@+id/small_layout_viewstub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Control.Custom_Group_And_Device"
        android:ellipsize="end"
        android:id="@+id/title"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_above="@+id/status"
        android:textDirection="locale"
        android:layout_marginStart="@dimen/control_custom_text_start_margin"
        android:layout_marginEnd="@dimen/control_custom_text_end_margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textAppearance="@style/TextAppearance.Control.Custom_Status"
        android:ellipsize="marquee"
        android:id="@+id/status"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/control_custom_text_bottom_margin"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textDirection="locale"
        android:layout_marginStart="@dimen/control_custom_text_start_margin"
        android:layout_marginEnd="@dimen/control_custom_text_end_margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:screenReaderFocusable="false"/>
</com.android.systemui.controls.ui.view.SquareLayout>
