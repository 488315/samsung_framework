<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="start|center_vertical"
    android:orientation="horizontal"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/ksh_app_item_padding_start"
    android:paddingEnd="@dimen/ksh_app_item_padding_end">
    <ImageView
        android:id="@+id/keyboard_shortcuts_icon"
        android:visibility="gone"
        android:layout_width="@dimen/ksh_app_item_img_size"
        android:layout_height="@dimen/ksh_app_item_img_size"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ksh_app_item_img_margin_end"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textAppearance="?android:attr/textAppearance"
        android:textSize="17sp"
        android:id="@+id/keyboard_shortcuts_keyword"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/keyboard_shortcuts_item_container"
        android:layout_toEndOf="@+id/keyboard_shortcuts_icon"/>
    <LinearLayout
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/keyboard_shortcuts_item_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
