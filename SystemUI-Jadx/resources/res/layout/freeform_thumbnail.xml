<?xml version="1.0" encoding="utf-8"?>
<com.android.wm.shell.freeform.FreeformThumbnailView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeform_thumbnail_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/freeform_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/freeform_preview_outline"
        android:clipToOutline="true">
        <ImageView
            android:background="@drawable/freeform_preview_outline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="15dp"
            android:clipToOutline="true"/>
        <ImageView
            android:id="@+id/freeform_thumbnail_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/freeform_thumbnail_outline_stroke"/>
    </FrameLayout>
</com.android.wm.shell.freeform.FreeformThumbnailView>
