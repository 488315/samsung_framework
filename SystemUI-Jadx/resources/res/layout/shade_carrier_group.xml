<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.shade.carrier.ShadeCarrierGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:id="@+id/qs_mobile"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <com.android.systemui.util.AutoMarqueeTextView
        android:textAppearance="@style/TextAppearance.QS.Status.SamsungCarriers"
        android:gravity="center_vertical"
        android:id="@+id/no_carrier_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textDirection="locale"/>
    <include
        android:id="@+id/carrier1"
        android:layout_weight="1"
        layout="@layout/shade_carrier"/>
    <TextView
        android:textColor="@color/shade_carrier_divider_dot"
        android:id="@+id/shade_carrier_divider1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shade_carrier_divider"/>
    <include
        android:id="@+id/carrier2"
        android:visibility="gone"
        android:layout_weight="1"
        layout="@layout/shade_carrier"/>
    <TextView
        android:textColor="@color/shade_carrier_divider_dot"
        android:id="@+id/shade_carrier_divider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shade_carrier_divider"/>
    <include
        android:id="@+id/carrier3"
        android:visibility="gone"
        android:layout_weight="1"
        layout="@layout/shade_carrier"/>
</com.android.systemui.shade.carrier.ShadeCarrierGroup>
