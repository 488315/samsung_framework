<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/screen_pinning_request_padding_dialog"
    android:paddingRight="@dimen/screen_pinning_request_padding_dialog"
    android:layout_width="360dp"
    android:layout_height="312dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/pinning_desc_optional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lock_to_app_recent_and_back_softkey"
                    android:lineSpacingExtra="4sp"
                    android:fontFamily="sec"
                    android:textFontWeight="400"
                    style="?android:attr/textAppearance"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">
                <FrameLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/device_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/pinapp_bg"
                        android:scaleType="centerInside"/>
                    <FrameLayout
                        android:layout_gravity="center"
                        android:layout_width="312dp"
                        android:layout_height="74dp">
                        <ImageView
                            android:layout_gravity="left"
                            android:id="@+id/left_gesture"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="68dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/pin_windows_img_gesture"
                            android:scaleType="center"/>
                        <ImageView
                            android:layout_gravity="left"
                            android:id="@+id/left_key"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="88dp"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/pin_windows_ic_recent"
                            android:scaleType="center"/>
                        <ImageView
                            android:layout_gravity="right"
                            android:id="@+id/right_gesture"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="68dp"
                            android:src="@drawable/pin_windows_img_gesture"
                            android:scaleType="center"/>
                        <ImageView
                            android:layout_gravity="right"
                            android:id="@+id/right_key"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="88dp"
                            android:src="@drawable/pin_windows_ic_back"
                            android:scaleType="center"/>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
