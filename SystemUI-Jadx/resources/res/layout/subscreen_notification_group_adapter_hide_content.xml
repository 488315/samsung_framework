<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/clear_cover_subscreen_notification_list_type_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/subscreen_noti_list_common_margin"
    android:minHeight="@dimen/subscreen_noti_list_item_min_height"
    android:layout_marginHorizontal="@dimen/subscreen_noti_list_common_margin">
    <TextView
        android:textSize="@dimen/subscreen_noti_group_detail_text_size"
        android:textStyle="bold"
        android:textColor="@color/subscreen_notification_text_color"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/hide_content_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="sec-roboto-light"
        android:layout_marginHorizontal="@dimen/subscreen_noti_group_horizontal_margin"
        android:layout_marginVertical="@dimen/subscreen_noti_group_vertical_margin"/>
</LinearLayout>
