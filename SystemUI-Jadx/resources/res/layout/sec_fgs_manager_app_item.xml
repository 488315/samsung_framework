<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="27dp"
    android:paddingVertical="14dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/fgs_manager_app_item_icon"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginEnd="15dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingEnd="8dp">
        <com.android.systemui.qs.SecFgsManagerNoItemTextView
            android:textSize="17dp"
            android:textColor="@color/sec_fgs_manager_app_item_app_label_text_color"
            android:gravity="start"
            android:id="@+id/fgs_manager_app_item_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sec-roboto-light"
            android:textAlignment="viewStart"
            android:layoutDirection="locale"
            app:maxTextScale="@dimen/sec_fgs_max_font_scale"/>
        <com.android.systemui.qs.SecFgsManagerNoItemTextView
            android:textSize="13dp"
            android:textColor="@color/sec_fgs_manager_app_item_app_item_duration_text_color"
            android:gravity="start"
            android:id="@+id/fgs_manager_app_item_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layoutDirection="locale"
            app:maxTextScale="@dimen/sec_fgs_max_font_scale"/>
    </LinearLayout>
    <Button
        android:textColor="@color/sec_fgs_manager_app_item_stop_button_text_color"
        android:layout_gravity="center_vertical"
        android:id="@+id/fgs_manager_app_item_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sec_fgs_manager_app_item_stop_button_label"
        style="@style/QuickPanelFgsListContainedButton"/>
</LinearLayout>
