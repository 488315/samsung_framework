<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.android.keyguard.AlphaOptimizedLinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sec_qs_detail_items_side_padding"
        android:paddingEnd="@dimen/sec_qs_detail_items_side_padding">
        <TextView
            android:textAppearance="@style/TextAppearance.QS.DetailHeader"
            android:id="@android:id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:textAlignment="viewStart"/>
        <ProgressBar
            android:theme="@style/Theme.AppCompat.DayNight"
            android:layout_gravity="center"
            android:id="@+id/qs_detail_header_progress"
            android:visibility="gone"
            android:layout_width="@dimen/qs_detail_header_progress_size"
            android:layout_height="@dimen/qs_detail_header_progress_size"
            android:indeterminate="true"
            android:layout_marginEnd="12dp"/>
        <ViewStub
            android:theme="@style/Theme.AppCompat.DayNight"
            android:id="@+id/toggle_stub"
            android:layout="@layout/sec_qs_detail_switch"
            android:inflatedId="@+id/toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.android.keyguard.AlphaOptimizedLinearLayout>
</LinearLayout>
