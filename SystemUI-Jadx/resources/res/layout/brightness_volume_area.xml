<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="88.9">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/flex_panel_brightness_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="60dp">
            <LinearLayout
                android:gravity="center"
                android:id="@+id/media_brightness_layout"
                android:background="@drawable/icon_background"
                android:layout_width="@dimen/flex_panel_volume_icon_size"
                android:layout_height="@dimen/flex_panel_volume_icon_size"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/brightness_icon"
                    android:layout_width="@dimen/flex_panel_volume_icon_size"
                    android:layout_height="@dimen/flex_panel_volume_icon_size"
                    android:src="@drawable/ic_brightness2"
                    android:tint="@color/panel_menu_icon_color"
                    android:contentDescription="@string/flex_panel_brightness"/>
            </LinearLayout>
            <androidx.appcompat.widget.SeslSeekBar
                android:layout_gravity="center"
                android:id="@+id/media_brightness_seekbar"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:progress="100"
                android:layout_centerVertical="true"
                android:contentDescription="@string/flex_panel_brightness"
                android:layout_toEndOf="@+id/media_brightness_layout"
                app:seslSeekBarMode="expand"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/flex_panel_volume_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="60dp">
            <FrameLayout
                android:gravity="center"
                android:id="@+id/media_volume_layout"
                android:background="@drawable/icon_background"
                android:layout_width="@dimen/flex_panel_volume_icon_size"
                android:layout_height="@dimen/flex_panel_volume_icon_size"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">
                <FrameLayout
                    android:layout_gravity="center"
                    android:id="@+id/media_volume_icon_layout"
                    android:visibility="visible"
                    android:layout_width="@dimen/flex_panel_volume_icon_size"
                    android:layout_height="@dimen/flex_panel_volume_icon_size">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/volume_icon"
                        android:layout_width="@dimen/flex_panel_volume_icon_size"
                        android:layout_height="@dimen/flex_panel_volume_icon_size"
                        android:src="@drawable/ic_ringtone_sound"
                        android:tint="@color/panel_menu_icon_color_expand"
                        android:contentDescription="@string/flex_panel_volume"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:id="@+id/media_volume_animated_icon_layout"
                    android:visibility="invisible"
                    android:layout_width="@dimen/flex_panel_volume_icon_size"
                    android:layout_height="@dimen/flex_panel_volume_icon_size">
                    <FrameLayout
                        android:layout_gravity="center"
                        android:id="@+id/volume_splash_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rotation="45">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/volume_icon_mute_splash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_audio_mute_splash"/>
                    </FrameLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/volume_media_icon_mute"
                        android:layout_width="@dimen/flex_panel_volume_icon_size"
                        android:layout_height="@dimen/flex_panel_volume_icon_size"
                        android:src="@drawable/ic_audio_media_mute"
                        android:tint="@color/panel_menu_icon_color"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/volume_media_icon_note"
                        android:layout_width="16dp"
                        android:layout_height="@dimen/flex_panel_volume_icon_size"
                        android:src="@drawable/ic_audio_media_note"
                        android:tint="@color/panel_menu_icon_color_expand"/>
                    <ImageView
                        android:id="@+id/volume_media_icon_wave_s"
                        android:layout_width="4dp"
                        android:layout_height="@dimen/flex_panel_volume_icon_size"
                        android:src="@drawable/ic_audio_media_wave_s"
                        android:tint="@color/panel_menu_icon_color"
                        android:alpha="0.5"/>
                    <ImageView
                        android:id="@+id/volume_media_icon_wave_l"
                        android:layout_width="5dp"
                        android:layout_height="@dimen/flex_panel_volume_icon_size"
                        android:src="@drawable/ic_audio_media_wave_l"
                        android:tint="@color/panel_menu_icon_color"
                        android:alpha="0.5"/>
                </FrameLayout>
            </FrameLayout>
            <androidx.appcompat.widget.SeslSeekBar
                android:layout_gravity="center"
                android:id="@+id/media_volume_seekbar"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:progress="100"
                android:layout_centerVertical="true"
                android:contentDescription="@string/flex_panel_volume"
                android:layout_toEndOf="@+id/media_volume_layout"
                app:seslSeekBarMode="expand"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
