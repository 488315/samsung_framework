<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.KeyguardRMMView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/keyguard_rmm_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/kg_accessibility_pin_unlock">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kg_message_area_width_tablet">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/message_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/rmm_message_container"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:gravity="top|center_horizontal"
                        android:orientation="vertical"
                        android:id="@+id/rmm_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.android.systemui.widget.SystemUITextView
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:id="@+id/keyguard_rmm_phone_locked"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/keyguard_fmm_phone_locked_title"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:textAllCaps="@bool/kg_use_all_caps"
                            androidprv:originColor="keyguard_message_area_color"
                            androidprv:whitebgColor="whitebg_keyguard_text_color"
                            style="@style/keyguard_fmm_message_area_style"/>
                        <com.android.systemui.widget.SystemUITextView
                            android:gravity="center"
                            android:id="@+id/keyguard_rmm_message"
                            android:scrollbars="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/kg_fmm_message_margin_top"
                            android:minHeight="@dimen/kg_fmm_message_min_height"
                            android:maxLines="@integer/kg_rmm_message_max_line"
                            android:scrollHorizontally="true"
                            androidprv:originColor="origin_keyguard_sub_message_area_text_color"
                            androidprv:whitebgColor="whitebg_keyguard_sub_message_area_text_color"
                            style="@style/keyguard_fmm_sub_help_text_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/rmm_contact_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.android.systemui.widget.SystemUITextView
                            android:gravity="center"
                            android:id="@+id/keyguard_rmm_contact_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/kg_fmm_owner_number_margin_bottom"
                            android:text="@string/keyguard_fmm_owner_phone"
                            androidprv:originColor="keyguard_message_area_color"
                            androidprv:whitebgColor="whitebg_keyguard_text_color"
                            style="@style/keyguard_fmm_sub_help_text_style"/>
                        <com.android.systemui.widget.SystemUIButton
                            android:gravity="center"
                            android:id="@+id/keyguard_rmm_contact_button"
                            android:paddingLeft="@dimen/keyguard_emergency_button_inner_padding"
                            android:paddingTop="@dimen/kg_emergency_button_padding"
                            android:paddingRight="@dimen/keyguard_emergency_button_inner_padding"
                            android:paddingBottom="@dimen/kg_emergency_button_padding"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/keyguard_bottom_area_emergency_button_area_min_height"
                            android:drawableLeft="@drawable/fmm_lock_ic_call"
                            android:contentDescription="@string/keyguard_accessibility_call"
                            android:drawableTint="@color/keyguard_message_area_color"
                            androidprv:originBackground="origin_transparent_ripple_drawable"
                            androidprv:originColor="keyguard_message_area_color"
                            androidprv:whitebgBackground="whitebg_transparent_ripple_drawable"
                            androidprv:whitebgColor="whitebg_keyguard_text_color"
                            style="@style/keyguard_emergency_button_style_tablet"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <FrameLayout
                            android:gravity="center"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/kg_pin_message_area_margin_bottom_tablet">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/kg_security_pin_input_box_margin_bottom_tablet">
                                <include
                                    android:gravity="center"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    layout="@layout/keyguard_sec_bouncer_message_area_tablet"/>
                                <include
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/kg_sub_message_margin_top"
                                    layout="@layout/keyguard_sub_message_area_tablet"/>
                            </LinearLayout>
                            <com.android.keyguard.AlphaOptimizedRelativeLayout
                                android:gravity="bottom"
                                android:layout_gravity="bottom|center_horizontal"
                                android:id="@+id/password_entry_box"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/kg_security_input_box_height_tablet"
                                android:layoutDirection="ltr">
                                <com.android.keyguard.SecPasswordTextView
                                    android:textAppearance="@style/TextAppearance.passwordEntry"
                                    android:id="@+id/rmmEntry"
                                    android:padding="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:singleLine="true"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/kg_accessibility_pin_edit_box"
                                    androidprv:originColor="origin_pin_digit_text_color"
                                    androidprv:scaledTextSize="28"
                                    androidprv:themeBlackColor="theme_pin_text_color_black"
                                    androidprv:themeColor="theme_pin_text_color"
                                    androidprv:themePolicyIgnorable="true"
                                    androidprv:whitebgColor="whitebg_keyguard_text_color"/>
                            </com.android.keyguard.AlphaOptimizedRelativeLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/kg_pin_container_margin_bottom_tablet"
                    android:layoutDirection="ltr">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:id="@+id/row1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/num_pad_bottom_margin_tablet"
                        android:layout_weight="1">
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key1"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            androidprv:digit="1"
                            androidprv:textView="@+id/rmmEntry"/>
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key2"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            android:layout_marginLeft="@dimen/num_pad_side_margin_tablet"
                            android:layout_marginRight="@dimen/num_pad_side_margin_tablet"
                            androidprv:digit="2"
                            androidprv:textView="@+id/rmmEntry"/>
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key3"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            androidprv:digit="3"
                            androidprv:textView="@+id/rmmEntry"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:id="@+id/row2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/num_pad_bottom_margin"
                        android:layout_weight="1">
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key4"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            androidprv:digit="4"
                            androidprv:textView="@+id/rmmEntry"/>
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key5"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            android:layout_marginLeft="@dimen/num_pad_side_margin_tablet"
                            android:layout_marginRight="@dimen/num_pad_side_margin_tablet"
                            androidprv:digit="5"
                            androidprv:textView="@+id/rmmEntry"/>
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key6"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            androidprv:digit="6"
                            androidprv:textView="@+id/rmmEntry"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:id="@+id/row3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/num_pad_bottom_margin"
                        android:layout_weight="1">
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key7"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            androidprv:digit="7"
                            androidprv:textView="@+id/rmmEntry"/>
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key8"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            android:layout_marginLeft="@dimen/num_pad_side_margin_tablet"
                            android:layout_marginRight="@dimen/num_pad_side_margin_tablet"
                            androidprv:digit="8"
                            androidprv:textView="@+id/rmmEntry"/>
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key9"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            androidprv:digit="9"
                            androidprv:textView="@+id/rmmEntry"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:id="@+id/row4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <com.android.keyguard.NumPadButton
                            android:gravity="center_vertical"
                            android:id="@+id/delete_button"
                            android:background="@drawable/ripple_drawable"
                            android:clickable="true"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            android:src="@drawable/pin_lock_btn_back"
                            android:scaleType="center"
                            android:contentDescription="@string/kg_keycode_delete"
                            androidprv:originImage="origin_pin_lock_btn_back"
                            androidprv:themeBlackColor="theme_pin_digit_text_color_black"
                            androidprv:themeBlackImage="pin_lock_btn_back_black"
                            androidprv:themeColor="theme_pin_digit_text_color"
                            androidprv:themeImage="pin_lock_btn_back"
                            androidprv:themePolicyIgnorable="true"
                            androidprv:whitebgImage="whitebg_pin_lock_btn_back"/>
                        <com.android.keyguard.SecNumPadKeyTablet
                            android:id="@+id/key0"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            android:layout_marginLeft="@dimen/num_pad_side_margin_tablet"
                            android:layout_marginRight="@dimen/num_pad_side_margin_tablet"
                            androidprv:digit="0"
                            androidprv:textView="@+id/rmmEntry"/>
                        <com.android.systemui.widget.SystemUITextView
                            android:gravity="center"
                            android:id="@+id/key_enter_text"
                            android:background="@drawable/ripple_drawable"
                            android:focusable="true"
                            android:visibility="gone"
                            android:clickable="true"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            android:text="@string/theme_pin_enter_text"
                            android:contentDescription="@string/kg_keycode_ok"
                            androidprv:originColor="origin_pin_digit_text_color"
                            androidprv:themeBlackColor="theme_pin_digit_text_color_black"
                            androidprv:themeColor="theme_pin_digit_text_color"
                            androidprv:whitebgColor="whitebg_keyguard_text_color"
                            style="@style/Ok_theme_tablet"/>
                        <com.android.keyguard.NumPadButton
                            android:gravity="center_vertical"
                            android:id="@+id/key_enter"
                            android:background="@drawable/ripple_drawable"
                            android:visibility="gone"
                            android:layout_width="@dimen/num_pad_size_tablet"
                            android:layout_height="@dimen/num_pad_size_tablet"
                            android:src="@drawable/ic_done_wht"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/kg_keycode_ok"
                            androidprv:themeBlackImage="ic_done_wht_black"
                            androidprv:themeImage="ic_done_wht"
                            androidprv:themePolicyIgnorable="true"/>
                    </LinearLayout>
                </LinearLayout>
                <include
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/keyguard_selector_fade_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/keyguard_emergency_button_tablet"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.android.keyguard.KeyguardRMMView>
