<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/sec_global_actions_cover_item_wrapped"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/sec_global_actions_cover_background"
        android:layout_width="@dimen/sec_global_actions_front_large_cover_item_width"
        android:layout_height="wrap_content">
        <ImageView
            android:gravity="center"
            android:id="@+id/sec_global_actions_icon"
            android:padding="@dimen/sec_global_actions_front_large_cover_text_icon_padding"
            android:layout_width="@dimen/sec_global_actions_front_large_cover_icon_width"
            android:layout_height="@dimen/sec_global_actions_front_large_cover_icon_width"
            android:scaleType="center"/>
        <TextView
            android:textSize="15sp"
            android:textColor="#fffafafa"
            android:gravity="center"
            android:id="@+id/sec_global_actions_label"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/sec_global_actions_front_large_cover_text_width"
            android:minHeight="@dimen/sec_global_actions_front_large_cover_text_height"
            android:maxLines="2"
            android:singleLine="false"
            android:importantForAccessibility="no"
            android:fontFamily="sec"
            android:textAlignment="center"
            android:textFontWeight="400"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="24px"
            android:textColor="#fffafafa"
            android:id="@+id/sec_global_actions_cover_text"
            android:paddingTop="8px"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sec"
            android:textAlignment="center"
            android:textFontWeight="400"/>
    </LinearLayout>
</LinearLayout>
