<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/sim_card_tray_protection_dialog_body_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sim_card_tray_protection_dialog_start_end_padding"
        android:paddingEnd="@dimen/sim_card_tray_protection_dialog_start_end_padding">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center"
            android:id="@+id/sim_card_tray_protection_dialog_body_image"
            android:visibility="gone"
            android:layout_width="@dimen/sim_card_tray_protection_dialog_body_image_width"
            android:layout_height="@dimen/sim_card_tray_protection_dialog_body_image_height"
            android:layout_marginTop="@dimen/sim_card_tray_protection_dialog_body_image_top_padding"
            android:layout_marginBottom="@dimen/sim_card_tray_protection_dialog_body_image_bottom_padding"
            android:scaleType="fitCenter"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_speed="1"/>
        <TextView
            android:textAppearance="?android:attr/textAppearance"
            android:id="@+id/sim_card_tray_protection_dialog_body_message_no_sim_card"
            android:paddingBottom="@dimen/sim_card_tray_protection_dialog_body_message_bottom_padding_no_sim_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?android:attr/textAppearance"
            android:id="@+id/sim_card_tray_protection_dialog_body_message_inserting_sim_card"
            android:paddingBottom="@dimen/sim_card_tray_protection_dialog_body_message_bottom_padding_inserting_sim_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?android:attr/textAppearance"
            android:id="@+id/sim_card_tray_protection_dialog_body_message_waterproof_sim_card"
            android:paddingBottom="@dimen/sim_card_tray_protection_dialog_body_message_bottom_padding_waterproof_sim_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
