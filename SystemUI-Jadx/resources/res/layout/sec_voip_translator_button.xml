<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/voip_translator_button"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:paddingStart="16dp">
    <FrameLayout
        android:id="@+id/voip_translator_icon_container"
        android:layout_width="@dimen/video_call_effects_mic_mode_icon_bg_size"
        android:layout_height="@dimen/video_call_effects_mic_mode_icon_bg_size">
        <ImageView
            android:id="@+id/voip_translator_icon_bg"
            android:layout_width="@dimen/video_call_effects_mic_mode_icon_bg_size"
            android:layout_height="@dimen/video_call_effects_mic_mode_icon_bg_size"
            android:src="@drawable/quickpanel_icon_voip_translator_background"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/voip_translator_icon"
            android:layout_width="@dimen/video_call_effects_mic_mode_icon_size"
            android:layout_height="@dimen/video_call_effects_mic_mode_icon_size"
            android:src="@drawable/quick_panel_icon_translator"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/voip_translator_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="12dp">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/qs_tile_label"
            android:id="@+id/voip_translator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sec_qs_live_translate"
            android:fontFamily="sec"
            android:textFontWeight="400"/>
    </LinearLayout>
</LinearLayout>
