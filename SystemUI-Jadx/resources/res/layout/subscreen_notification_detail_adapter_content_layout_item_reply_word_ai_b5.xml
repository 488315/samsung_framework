<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/subscreen_detail_smart_reply_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/subscreen_noti_detail_smart_reply_item_margin_vertical_b5">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/subscreen_detail_smart_reply_item_box"
        android:background="@drawable/subscreen_notification_smart_reply_result_bg_b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/subscreen_noti_detail_smart_reply_item_height_b5">
        <TextView
            android:textSize="@dimen/subscreen_noti_detail_content_text_size_b5"
            android:textColor="@color/subscreen_notification_text_color_white_b5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/subscreen_detail_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:fontFamily="sec"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="7dp"
            android:textFontWeight="400"/>
    </LinearLayout>
</LinearLayout>
