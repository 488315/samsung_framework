<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="end|center_vertical"
    android:id="@+id/privacy_chip"
    android:focusable="true"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/status_bar_privacy_indicator_chip_height"
    android:layout_marginStart="@dimen/status_bar_privacy_indicator_chip_padding">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/icons_container"
        android:background="@drawable/samsung_privacy_chip_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/status_bar_privacy_indicator_chip_height"
        android:paddingStart="@dimen/status_bar_privacy_indicator_chip_padding"
        android:paddingEnd="@dimen/status_bar_privacy_indicator_chip_padding"/>
</merge>
