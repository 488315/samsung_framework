<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/privacy_item"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/sec_privacy_dialog_item_padding_left"
    android:paddingRight="@dimen/sec_privacy_dialog_divider_padding"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/sec_privacy_dialog_item_height"
    android:importantForAccessibility="yes">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="@style/TextAppearance.PrivacyDialog"
        android:gravity="start|center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/sec_privacy_dialog_item_height"
        android:layout_weight="1"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:layout_marginStart="@dimen/sec_privacy_dialog_item_icon_text_interval"
        android:lineHeight="14sp"/>
</LinearLayout>
