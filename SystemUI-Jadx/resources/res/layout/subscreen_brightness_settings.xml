<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.qp.SubroomBrightnessSettingsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/subscreen_brightness_margin_right"
    android:layout_marginTop="@dimen/subscreen_brightness_margin_top"
    android:layout_marginRight="@dimen/subscreen_brightness_margin_right"
    android:layout_marginBottom="@dimen/subscreen_brightness_margin_bottom">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subscreen_brightness_seekbar_height">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.systemui.qp.SubScreenBrightnessToggleSeekBar
                android:disabledAlpha="1"
                android:id="@+id/subroom_brightness_seekbar"
                android:background="@null"
                android:clickable="true"
                android:layout_width="@dimen/subscreen_brightness_seekbar_width"
                android:layout_height="@dimen/subscreen_brightness_seekbar_height"
                android:maxHeight="@dimen/subscreen_brightness_seekbar_height"
                android:progress="60"
                android:progressDrawable="@drawable/subroom_seekbar_background"
                android:minHeight="@dimen/subscreen_brightness_seekbar_height"
                android:thumb="@null"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:splitTrack="false"
                android:thumbTint="@color/transparent"/>
            <ImageView
                android:layout_gravity="start|center_vertical"
                android:id="@+id/brightness_panel_status_icon"
                android:visibility="visible"
                android:layout_width="@dimen/subscreen_brightness_icon_height"
                android:layout_height="@dimen/subscreen_brightness_icon_height"
                android:layout_marginLeft="@dimen/subscreen_brightness_margin_left"
                android:layout_marginTop="@dimen/subscreen_brightness_imageview_margin_top"
                android:layout_marginBottom="@dimen/subscreen_brightness_imageview_margin_top"
                android:src="@drawable/subroom_quick_panel_icon_brightness"
                android:scaleType="centerInside"
                android:tint="@color/subroom_seekbar_icon_color"/>
        </FrameLayout>
    </LinearLayout>
</com.android.systemui.qp.SubroomBrightnessSettingsView>
