<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/qs_detail_padding_start"
    android:paddingEnd="@dimen/qs_detail_padding_start">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/music_share_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/music_share_title_divider"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.QS.DetailItemHeader"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_settings_bluetooth_detail_music_share_title"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/paired_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="7.5dp"
            android:paddingBottom="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.QS.DetailItemHeader"
                android:gravity="center_vertical"
                android:id="@+id/paired_devices_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_settings_bluetooth_detail_paired_devices_title"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/available_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qs_detail_margin_from_top_available_devices">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/available_devices_group"
            android:paddingTop="8dp"
            android:paddingBottom="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.QS.DetailItemHeader"
                android:gravity="center_vertical"
                android:id="@+id/available_devices_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_settings_bluetooth_detail_available_devices_title"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
