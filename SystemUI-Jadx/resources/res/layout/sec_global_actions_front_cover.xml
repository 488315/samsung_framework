<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5.5dp"
    android:layout_marginBottom="5.5dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp">
    <ImageView
        android:id="@+id/front_cover_back_button"
        android:background="@drawable/globalaction_back_ripple"
        android:layout_width="46px"
        android:layout_height="46px"
        android:layout_marginTop="20px"
        android:src="@drawable/ic_globalactions_back"
        android:contentDescription="@string/subscreen_globalactions_back_button_content_description"
        android:layout_marginStart="16px"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/sec_global_actions_front_cover_item"
        android:layout_width="@dimen/sec_global_actions_front_cover_width"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:gravity="center_horizontal"
        android:id="@+id/sec_global_actions_front_cover_confirm"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
