<?xml version="1.0" encoding="utf-8"?>
<com.android.wm.shell.common.DismissButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="bottom|center_horizontal"
    android:id="@+id/dismiss_target"
    android:background="@drawable/dismiss_button_bg"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:layout_marginBottom="58dp"
    android:minWidth="120dp"
    android:elevation="@dimen/dismiss_elevation"
    android:outlineSpotShadowColor="@color/dismiss_button_shadow_color">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/dismiss_button_icon"
        android:background="@drawable/dismiss_button_x_mtrl"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/dismiss_button_icon_color"/>
    <TextView
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textSize="@dimen/dismiss_button_text_size"
        android:textColor="@color/dismiss_button_text_color"
        android:gravity="center_vertical"
        android:id="@+id/dismiss_button_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Cancel"
        android:fontFamily="sec"
        android:textAlignment="center"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="16dp"
        android:textFontWeight="400"/>
</com.android.wm.shell.common.DismissButtonView>
