<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.notification.row.HybridConversationNotificationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="start|center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="12dp">
    <FrameLayout
        android:visibility="gone"
        android:layout_width="@android:dimen/dialog_fixed_width_major"
        android:layout_height="@dimen/conversation_single_line_face_pile_size"
        android:paddingHorizontal="16dp">
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@android:id/exclude"
            android:layout_width="@dimen/conversation_single_line_avatar_size"
            android:layout_height="@dimen/conversation_single_line_avatar_size"/>
        <ViewStub
            android:layout_gravity="end|center_vertical"
            android:id="@android:id/edittext_container"
            android:layout="@android:layout/dialog_title_material"
            android:layout_width="@dimen/conversation_single_line_face_pile_size"
            android:layout_height="@dimen/conversation_single_line_face_pile_size"/>
    </FrameLayout>
    <TextView
        android:textAppearance="@android:style/TextAppearance.Holo.Light.Widget.Switch"
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingEnd="8dp"
        android:layout_marginStart="@android:dimen/dialog_fixed_width_major"/>
    <TextView
        android:id="@+id/conversation_notification_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingEnd="4dp"
        style="@android:style/Widget.Holo.QuickContactBadgeSmall.WindowMedium"/>
    <TextView
        android:id="@+id/notification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingEnd="4dp"
        style="@android:style/Widget.Holo.QuickContactBadgeSmall.WindowMedium"/>
</com.android.systemui.statusbar.notification.row.HybridConversationNotificationView>
