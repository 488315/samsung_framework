<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/detail_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/subscreen_noti_detail_header_start_margin"
            android:layout_marginEnd="24dp">
            <ImageView
                android:id="@+id/back_key"
                android:background="@drawable/subscreen_notification_back_button_background"
                android:layout_width="@dimen/subscreen_noti_detail_item_back_icon_size"
                android:layout_height="@dimen/subscreen_noti_detail_item_back_icon_size"
                android:src="@drawable/subscreen_notification_detail_back_button_icon"/>
            <ImageView
                android:id="@+id/subscreen_header_icon"
                android:layout_width="@dimen/subscreen_noti_detail_header_icon_size"
                android:layout_height="@dimen/subscreen_noti_detail_header_icon_size"
                android:layout_marginStart="@dimen/subscreen_noti_detail_header_icon_start_margin"/>
            <TextView
                android:textSize="@dimen/subscreen_noti_header_title_text_size"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:id="@+id/subscreen_header_app_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="28dp"
                android:maxLines="1"
                android:layout_weight="1"
                android:fontFamily="sec-roboto-light"
                android:layout_marginStart="@dimen/subscreen_noti_detail_header_app_name_start_margin"/>
            <TextView
                android:textSize="@dimen/subscreen_noti_detail_item_header_clock_text_size"
                android:textColor="#999999"
                android:layout_gravity="end|center_vertical"
                android:id="@+id/clock"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:45"
                android:layout_marginStart="@dimen/subscreen_noti_extra_icon_margin"/>
            <ImageView
                android:id="@+id/two_phone_icon"
                android:visibility="gone"
                android:layout_width="@dimen/subscreen_noti_two_phone_icon_width"
                android:layout_height="@dimen/subscreen_noti_two_phone_icon_height"
                android:tint="@color/subscreen_notification_two_phone_icon_tint_color"
                android:layout_marginStart="@dimen/subscreen_noti_extra_icon_margin"/>
            <ImageView
                android:id="@+id/secure_icon"
                android:visibility="gone"
                android:layout_width="@dimen/subscreen_noti_secure_icon_size"
                android:layout_height="@dimen/subscreen_noti_secure_icon_size"
                android:layout_marginStart="@dimen/subscreen_noti_extra_icon_margin"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/body_layout"
                android:background="@drawable/subscreen_notification_detail_type_item_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/subscreen_noti_detail_title_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/subscreen_notification_text_color"
                    android:ellipsize="end"
                    android:id="@+id/name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="sec-roboto-light"
                    android:layout_marginHorizontal="24dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/detail_button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:textSize="@dimen/subscreen_noti_button_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/subscreen_notification_text_color"
                    android:gravity="center"
                    android:id="@+id/call_back_button"
                    android:background="@drawable/subscreen_notification_button_background"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:minWidth="@dimen/subscreen_noti_button_width"
                    android:minHeight="@dimen/subscreen_noti_button_height"
                    android:text="@string/subscreen_detail_adapter_call_back_button_text"
                    android:fontFamily="sec-roboto-light"
                    android:paddingHorizontal="@dimen/subscreen_noti_button_padding_horizontal"/>
                <TextView
                    android:textSize="@dimen/subscreen_noti_button_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/subscreen_notification_text_color"
                    android:gravity="center"
                    android:id="@+id/app_open_button"
                    android:background="@drawable/subscreen_notification_button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:minWidth="@dimen/subscreen_noti_button_width"
                    android:minHeight="@dimen/subscreen_noti_button_height"
                    android:text="@string/subscreen_detail_adapter_open_app_button_text"
                    android:fontFamily="sec-roboto-light"
                    android:paddingHorizontal="@dimen/subscreen_noti_button_padding_horizontal"/>
                <TextView
                    android:textSize="@dimen/subscreen_noti_button_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/subscreen_notification_text_color"
                    android:gravity="center"
                    android:id="@+id/clear_button"
                    android:background="@drawable/subscreen_notification_button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:minWidth="@dimen/subscreen_noti_button_width"
                    android:minHeight="@dimen/subscreen_noti_button_height"
                    android:text="@string/clear_all_text"
                    android:fontFamily="sec-roboto-light"
                    android:paddingHorizontal="@dimen/subscreen_noti_button_padding_horizontal"/>
                <TextView
                    android:textSize="@dimen/subscreen_noti_button_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/subscreen_notification_text_color"
                    android:gravity="center"
                    android:id="@+id/reply_button"
                    android:background="@drawable/subscreen_notification_button_background"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:minWidth="@dimen/subscreen_noti_button_width"
                    android:minHeight="@dimen/subscreen_noti_button_height"
                    android:text="@string/subscreen_detail_adapter_reply_button_text"
                    android:fontFamily="sec-roboto-light"/>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:id="@+id/reply_voice_emoji"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:id="@+id/reply_voice_button"
                        android:background="@drawable/subscreen_notification_svoice_background"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_foldable_voice"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/subscreen_notification_svoice_content_description"
                        android:layout_marginHorizontal="12dp"
                        android:paddingHorizontal="22dp"
                        android:paddingVertical="19dp"/>
                    <ImageView
                        android:id="@+id/reply_emoji_button"
                        android:background="@drawable/subscreen_notification_emoji_background"
                        android:padding="19dp"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_foldable_emoji"
                        android:scaleType="centerInside"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/subscreen_notification_emoji_content_description"
                        android:layout_alignEnd="@+id/edit_responses"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="7dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/quick_reply_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/reply_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
        <TextView
            android:textSize="@dimen/subscreen_noti_button_text_size"
            android:textStyle="bold"
            android:textColor="@color/subscreen_notification_text_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/edit_button"
            android:background="@drawable/subscreen_notification_button_background"
            android:visibility="gone"
            android:layout_width="@dimen/subscreen_noti_button_width"
            android:layout_height="@dimen/subscreen_noti_button_height"
            android:text="@string/subscreen_detail_adapter_Edit_button_text"
            android:fontFamily="sec-roboto-light"
            android:layout_marginVertical="32dp"/>
    </LinearLayout>
</LinearLayout>
