<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/stack_education_layout"
    android:background="@drawable/bubble_stack_user_education_bg"
    android:paddingTop="48dp"
    android:paddingBottom="48dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/bubble_user_education_padding_end"
    android:layout_marginEnd="@dimen/bubble_user_education_margin_end">
    <TextView
        android:textAppearance="@android:style/ActionBarButton"
        android:textColor="@android:color/Teal_700"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/stack_education_title"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bubbles_user_education_title"
        android:maxLines="2"
        android:fontFamily="@android:string/eventTypeBirthday"
        android:textAlignment="viewStart"/>
    <TextView
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Toolbar.Title"
        android:textColor="@android:color/Teal_700"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/stack_education_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bubbles_user_education_description"
        android:fontFamily="@android:string/eventTypeAnniversary"
        android:textAlignment="viewStart"/>
</LinearLayout>
