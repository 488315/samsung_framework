<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="start"
    android:layout_gravity="start"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp">
    <ImageView
        android:layout_gravity="top"
        android:id="@+id/detail_conversation_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/subscreen_notification_text_color_white_b5"
            android:id="@+id/detail_sender_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="sec-roboto-light"
            android:layout_marginStart="10dp"/>
        <TextView
            android:textSize="@dimen/subscreen_noti_detail_content_text_size_b5"
            android:textColor="@color/subscreen_notification_detail_received_msg_text_color_b5"
            android:gravity="center_vertical"
            android:id="@+id/detail_content_text"
            android:background="@drawable/subscreen_notification_detail_received_msg_bg_b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/subscreen_noti_detail_conversation_bottom_margin_small_b5"
            android:maxWidth="250dp"
            android:minHeight="32dp"
            android:includeFontPadding="false"
            android:fontFamily="sec"
            android:textDirection="locale"
            android:textAlignment="viewStart"
            android:paddingHorizontal="12dp"
            android:paddingVertical="7dp"
            android:textFontWeight="400"/>
        <ImageView
            android:id="@+id/detail_content_image"
            android:background="@drawable/subscreen_notification_detail_content_image_background_b5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/subscreen_noti_detail_conversation_bottom_margin_small_b5"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:clipToOutline="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/subscreen_noti_detail_conversation_bottom_margin_small_b5">
        <DateTimeView
            android:textSize="11dp"
            android:textColor="@color/subscreen_notification_conversation_clock_text_color_b5"
            android:id="@+id/detail_clock"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:fontFamily="sec"
            android:layout_marginStart="2dp"
            android:textFontWeight="400"/>
    </LinearLayout>
</LinearLayout>
