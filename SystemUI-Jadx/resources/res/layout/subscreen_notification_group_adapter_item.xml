<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/subscreen_notification_list_type_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/subscreen_noti_list_common_margin"
    android:minHeight="@dimen/subscreen_noti_list_item_min_height"
    android:layout_marginHorizontal="@dimen/subscreen_noti_list_common_margin">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/subscreen_notification_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/subscreen_noti_group_horizontal_margin"
        android:layout_marginVertical="@dimen/subscreen_noti_group_vertical_margin">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/subscreen_noti_group_detail_text_size"
                android:textStyle="bold"
                android:textColor="@color/subscreen_notification_text_color"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/subscreen_notification_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/subscreen_noti_detail_title_width"
                android:maxLines="1"
                android:layout_weight="1"
                android:fontFamily="sec-roboto-light"/>
            <FrameLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/unread_message_count_layout"
                android:background="@drawable/subscreen_notification_group_count_background"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/subscreen_noti_list_item_background_width"
                android:minHeight="@dimen/subscreen_noti_list_item_background_height"
                android:layout_marginStart="@dimen/subscreen_noti_extra_icon_margin">
                <TextView
                    android:textSize="@dimen/subscreen_noti_group_count_text_size"
                    android:textColor="@color/subscreen_notification_text_color"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/unread_message_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:includeFontPadding="false"
                    android:fontFamily="roboto-regular"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/subscreen_noti_group_detail_text_size"
            android:textColor="@color/subscreen_notification_content_text_color"
            android:ellipsize="end"
            android:id="@+id/subscreen_notification_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:fontFamily="roboto-regular"/>
    </LinearLayout>
</LinearLayout>
