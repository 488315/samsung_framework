<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subscreen_notification_full_popup_frame"
    android:background="@android:color/black"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">
        <ImageView
            android:id="@+id/two_phone_icon"
            android:visibility="gone"
            android:layout_width="10dp"
            android:layout_height="@dimen/clear_cover_subscreen_noti_secure_icon_size"
            android:tint="@color/subscreen_notification_two_phone_icon_tint_color"/>
        <ImageView
            android:id="@+id/secure_icon"
            android:visibility="gone"
            android:layout_width="@dimen/clear_cover_subscreen_noti_secure_icon_size"
            android:layout_height="@dimen/clear_cover_subscreen_noti_secure_icon_size"
            android:layout_marginStart="@dimen/clear_cover_subscreen_noti_icon_between_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp">
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/clear_cover_subscreen_noti_full_popup_icon_size"
            android:layout_height="@dimen/clear_cover_subscreen_noti_full_popup_icon_size">
            <ImageView
                android:id="@+id/subscreen_notification_header_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_gravity="end|bottom"
                android:id="@+id/subscreen_notification_sub_icon"
                android:visibility="gone"
                android:layout_width="@dimen/clear_cover_subscreen_noti_full_popup_sub_icon_size"
                android:layout_height="@dimen/clear_cover_subscreen_noti_full_popup_sub_icon_size"
                android:antialias="true"
                android:adjustViewBounds="true"/>
        </FrameLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.SubscreenNotificationDetail"
            android:textSize="@dimen/clear_cover_subscreen_noti_full_popup_title_text_size"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:id="@+id/subscreen_notification_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"/>
        <TextView
            android:textAppearance="@style/TextAppearance.SubscreenNotificationDetail"
            android:textSize="@dimen/clear_cover_subscreen_noti_full_popup_title_text_size"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/subscreen_notification_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textAlignment="center"/>
    </LinearLayout>
</FrameLayout>
