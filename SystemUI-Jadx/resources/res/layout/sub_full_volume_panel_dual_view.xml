<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/volume_panel_dual_view"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/sub_full_volume_panel_dual_view_elevation_padding_horizontal"
    android:paddingVertical="@dimen/sub_full_volume_panel_dual_view_elevation_padding_vertical">
    <FrameLayout
        android:id="@+id/volume_panel_dual_view_background"
        android:background="@drawable/sub_full_volume_panel_expand_bg_blur"
        android:layout_width="@dimen/sub_full_volume_panel_dual_view_width"
        android:layout_height="@dimen/sub_full_volume_panel_dual_view_height"
        android:elevation="@dimen/sub_full_volume_panel_expand_view_elevation"
        android:outlineProvider="background">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/volume_panel_dual_blur"
            android:background="@drawable/sub_full_volume_panel_expand_bg_blur"
            android:visibility="invisible"
            android:layout_width="@dimen/sub_full_volume_panel_dual_view_width"
            android:layout_height="@dimen/sub_full_volume_panel_dual_view_height"
            android:foreground="@drawable/sub_full_volume_panel_expand_fg"/>
        <FrameLayout
            android:id="@+id/volume_panel_expand_view_background_stroke"
            android:background="@drawable/sub_full_volume_panel_expand_bg_blur_stroke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/volume_panel_dual_view_contents"
        android:layout_width="@dimen/sub_full_volume_panel_dual_view_width"
        android:layout_height="@dimen/sub_full_volume_panel_dual_view_height"
        android:elevation="@dimen/sub_full_volume_panel_expand_view_elevation">
        <LinearLayout
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/volume_panel_row_container"
            android:padding="6dp"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:divider="@drawable/sub_full_volume_row_separator"
            android:showDividers="middle"
            android:elevation="12dp"/>
        <ImageView
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/volume_panel_expand_button"
            android:paddingTop="@dimen/sub_full_volume_panel_dual_view_option_button_padding_top_bottom"
            android:paddingBottom="@dimen/sub_full_volume_panel_dual_view_option_button_padding_top_bottom"
            android:layout_width="@dimen/sub_full_volume_panel_dual_view_expand_button_touch_width"
            android:layout_height="@dimen/sub_full_volume_panel_dual_view_expand_button_touch_height"
            android:src="@drawable/tw_ic_audio_more"
            android:scaleType="centerInside"
            android:tint="@color/volume_detail_icon_color"
            android:paddingStart="@dimen/sub_full_volume_panel_dual_view_option_button_padding"
            android:paddingEnd="@dimen/sub_full_volume_panel_dual_view_option_button_padding"
            android:elevation="12dp"/>
        <TextView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/volume_panel_dual_view_title"
            android:layout_width="103dp"
            android:layout_height="32dp"
            android:layout_marginBottom="240dp"
            android:elevation="12dp"
            style="@style/TextAppearance.Volume.Title"/>
    </FrameLayout>
</FrameLayout>
