<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.qp.flashlight.SubroomFlashLightButtonSettingsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.SecLight"
                android:textSize="@dimen/qs_tile_subscreen_panel_flashlight_label_text_size"
                android:textStyle="bold"
                android:textColor="@color/subscreen_panel_flashlight_text_color"
                android:gravity="center"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/flashlight_label"
                android:focusable="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/subscreen_panel_toolbar_height"
                android:text="@string/sec_quick_settings_flashlight_label"
                android:contentDescription="@string/sec_quick_settings_flashlight_label"
                android:textAlignment="viewStart"
                android:layout_marginStart="@dimen/qs_tile_subscreen_panel_flashlight_label_start_margin"/>
        </FrameLayout>
        <ImageView
            android:layout_gravity="start|top"
            android:id="@+id/flashlight_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/subscreen_flashlight_imageview_margin"
            android:src="@drawable/flashlight_help"/>
        <ImageView
            android:layout_gravity="start|top"
            android:id="@+id/flashlight_help_subpanel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qs_tile_subscreen_panel_help_imageview_top_margin"
            android:src="@drawable/flashlight_help_subpanel"/>
        <TextView
            android:textAppearance="@style/TextAppearance.SecSemiBold"
            android:textSize="@dimen/subscreen_flashlight_help_text_size"
            android:textStyle="normal"
            android:textColor="@color/subroom_flashlight_help_text"
            android:gravity="start"
            android:id="@+id/subroom_flashlight_guide_text"
            android:scrollbars="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/subscreen_flashlight_margin_top"
            android:text="@string/subscreen_flashlight_help_text"
            android:lineSpacingExtra="@dimen/subscreen_flashlight_helptext_line_spacing"
            android:contentDescription="@string/subscreen_flashlight_help_text"
            android:textAlignment="viewStart"
            android:layout_marginStart="@dimen/subscreen_flashlight_margin_start"
            android:layout_marginEnd="@dimen/subscreen_flashlight_margin_end"/>
    </FrameLayout>
</com.android.systemui.qp.flashlight.SubroomFlashLightButtonSettingsView>
