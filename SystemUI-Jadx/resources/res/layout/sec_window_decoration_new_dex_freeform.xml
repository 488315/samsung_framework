<?xml version="1.0" encoding="utf-8"?>
<com.android.wm.shell.windowdecor.WindowDecorLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/caption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/move_display_button_set"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/secondary_button_set">
                <com.android.wm.shell.windowdecor.WindowMenuItemView
                    android:id="@+id/move_display_window"
                    android:paddingTop="@dimen/decor_button_padding_top"
                    android:paddingBottom="@dimen/decor_button_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sec_decor_button_move_display"
                    android:contentDescription="@string/sec_decor_button_operation_move_display"
                    android:paddingStart="@dimen/decor_button_padding"
                    android:paddingEnd="@dimen/decor_button_padding"/>
                <com.android.wm.shell.windowdecor.WindowMenuDivider
                    android:layout_gravity="center_vertical"
                    android:id="@+id/move_display_divider"
                    android:background="@drawable/sec_decor_divider"
                    android:layout_width="@dimen/decor_divider_width"
                    android:layout_height="@dimen/decor_divider_height"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/more_button_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">
                <com.android.wm.shell.windowdecor.WindowMenuItemView
                    android:id="@+id/more_window"
                    android:paddingTop="@dimen/decor_button_padding_top"
                    android:paddingBottom="@dimen/decor_button_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sec_decor_button_more"
                    android:contentDescription="@string/sec_decor_button_text_more"
                    android:paddingStart="@dimen/decor_button_padding"
                    android:paddingEnd="@dimen/decor_button_padding_large"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/primary_button_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/more_button_set">
                <com.android.wm.shell.windowdecor.WindowMenuItemView
                    android:id="@+id/minimize_window"
                    android:paddingTop="@dimen/decor_button_padding_top"
                    android:paddingBottom="@dimen/decor_button_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sec_decor_button_minimize_desktop"
                    android:contentDescription="@string/sec_decor_button_text_minimize"
                    android:paddingStart="@dimen/decor_button_padding"
                    android:paddingEnd="@dimen/decor_button_padding"/>
                <com.android.wm.shell.windowdecor.WindowMenuItemView
                    android:id="@+id/maximize_window"
                    android:paddingTop="@dimen/decor_button_padding_top"
                    android:paddingBottom="@dimen/decor_button_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sec_decor_button_maximize"
                    android:contentDescription="@string/sec_decor_button_text_maximize"
                    android:paddingStart="@dimen/decor_button_padding"
                    android:paddingEnd="@dimen/decor_button_padding"/>
                <com.android.wm.shell.windowdecor.WindowMenuItemView
                    android:id="@+id/close_window"
                    android:paddingTop="@dimen/decor_button_padding_top"
                    android:paddingBottom="@dimen/decor_button_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sec_decor_button_close"
                    android:contentDescription="@string/sec_decor_button_text_close"
                    android:paddingStart="@dimen/decor_button_padding"
                    android:paddingEnd="@dimen/decor_button_padding"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/secondary_button_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/primary_button_set">
                <com.android.wm.shell.windowdecor.WindowMenuItemView
                    android:id="@+id/window_pin_window"
                    android:paddingTop="@dimen/decor_button_padding_top"
                    android:paddingBottom="@dimen/decor_button_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sec_decor_button_window_pin_desktop"
                    android:contentDescription="@string/sec_decor_button_text_window_pin"
                    android:paddingStart="@dimen/decor_button_padding"
                    android:paddingEnd="@dimen/decor_button_padding"
                    app:hasIconBackground="true"/>
                <com.android.wm.shell.windowdecor.WindowMenuItemView
                    android:id="@+id/split_window"
                    android:paddingTop="@dimen/decor_button_padding_top"
                    android:paddingBottom="@dimen/decor_button_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sec_decor_button_split_leftright"
                    android:contentDescription="@string/sec_decor_button_text_split"
                    android:paddingStart="@dimen/decor_button_padding"
                    android:paddingEnd="@dimen/decor_button_padding"/>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/slider_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.wm.shell.windowdecor.WindowDecorSlider
                android:layout_gravity="center"
                android:id="@+id/slider"
                android:layout_width="220dp"
                android:layout_height="@dimen/sec_decor_button_size"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"/>
        </FrameLayout>
    </FrameLayout>
</com.android.wm.shell.windowdecor.WindowDecorLinearLayout>
