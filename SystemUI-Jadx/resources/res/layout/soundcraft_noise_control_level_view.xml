<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/item_root"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_gravity="center_horizontal"
        android:id="@+id/divider"
        android:background="@color/mic_mode_detail_divider_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qs_toggle_divider_height"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/noise_canceling_bar_container"
        android:paddingTop="14dp"
        android:paddingBottom="19dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="17sp"
            android:textColor="#fffafaff"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="Noise canceling level"
            android:fontFamily="sec-400"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:letterSpacing="0"/>
        <RelativeLayout
            android:id="@+id/seekbar_container"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <SeekBar
                android:id="@+id/noise_canceling_seekbar"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:progressDrawable="@drawable/sec_soundcraft_noise_level_progress_drawable"
                android:thumb="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:splitTrack="false"/>
            <ImageView
                android:id="@+id/noise_canceling_seekbar_icon"
                android:layout_width="21.12dp"
                android:layout_height="21.12dp"
                android:src="@drawable/soundcraft_ic_buds3_anc_on_unselelcted"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:layout_marginStart="23.44dp"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
