<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/subscreen_notification_list_type_item_background_b5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/subscreen_noti_list_top_margin_b5"
    android:elevation="4dp"
    android:layout_marginHorizontal="@dimen/subscreen_noti_list_horizontal_margin_b5">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/subscreen_noti_list_item_height_b5">
        <include layout="@layout/subscreen_notification_list_icon_layout_b5"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/subscreen_notification_text_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/subscreen_noti_list_end_margin_b5"
            android:layout_marginVertical="@dimen/subscreen_noti_text_layout_vertical_margin_b5">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/subscreen_noti_title_text_size_b5"
                    android:textStyle="bold"
                    android:textColor="@color/subscreen_notification_common_text_color_b5"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/subscreen_notification_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="sec"
                    android:textFontWeight="600"/>
                <DateTimeView
                    android:textSize="@dimen/subscreen_noti_clock_text_size_b5"
                    android:textColor="@color/subscreen_notification_list_small_text_color_b5"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/subscreen_notification_clock"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/subscreen_noti_top_popup_clock_width_b5"
                    android:text="12:45 AM"
                    android:singleLine="true"
                    android:fontFamily="sec"
                    android:layout_marginStart="@dimen/subscreen_noti_clock_start_margin_b5"
                    android:textFontWeight="400"/>
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/two_phone_icon"
                    android:visibility="gone"
                    android:layout_width="@dimen/subscreen_noti_two_phone_icon_width_b5"
                    android:layout_height="@dimen/subscreen_noti_two_phone_icon_height_b5"
                    android:tint="@color/subscreen_notification_two_phone_icon_tint_color_b5"
                    android:layout_marginStart="@dimen/subscreen_noti_extra_icon_margin_b5"/>
                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/secure_icon"
                    android:visibility="gone"
                    android:layout_width="@dimen/subscreen_noti_secure_icon_size_b5"
                    android:layout_height="@dimen/subscreen_noti_secure_icon_size_b5"
                    android:layout_marginStart="@dimen/subscreen_noti_extra_icon_margin_b5"/>
                <TextView
                    android:textSize="@dimen/subscreen_noti_group_count_text_size_b5"
                    android:textStyle="bold"
                    android:textColor="@color/subscreen_notification_count_text_color_b5"
                    android:id="@+id/unread_message_count"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sec-roboto-light"
                    android:layout_marginStart="@dimen/subscreen_noti_count_start_margin_b5"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/subscreen_noti_content_text_size_b5"
                android:textColor="@color/subscreen_notification_list_content_text_color_b5"
                android:ellipsize="end"
                android:id="@+id/subscreen_notification_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="sec"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:textFontWeight="400"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/subscreen_right_icon"
            android:background="@drawable/subscreen_notification_big_picture_icon_background_b5"
            android:visibility="gone"
            android:layout_width="@dimen/subscreen_noti_icon_size_b5"
            android:layout_height="@dimen/subscreen_noti_icon_size_b5"
            android:scaleType="centerCrop"
            android:layout_marginStart="@dimen/subscreen_noti_extra_icon_margin_b5"
            android:layout_marginEnd="@dimen/subscreen_noti_list_end_margin_b5"
            android:clipToOutline="true"/>
    </LinearLayout>
</LinearLayout>
