<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/handle_menu"
    android:background="@drawable/sec_decor_caption_menu_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/background_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.android.wm.shell.windowdecor.WindowMenuAnimationView
                android:layout_gravity="center"
                android:id="@+id/caption_pin_window"
                android:padding="@dimen/decor_button_padding"
                android:layout_width="@dimen/sec_decor_pin_button_width"
                android:layout_height="@dimen/sec_decor_button_size"
                android:scaleType="fitXY"
                android:contentDescription="@string/sec_decor_button_text_caption_pin"
                android:paddingStart="@dimen/decor_button_padding_large"/>
            <com.android.wm.shell.windowdecor.WindowMenuDivider
                android:layout_gravity="center_vertical"
                android:id="@+id/divider"
                android:background="@drawable/sec_decor_divider"
                android:layout_width="@dimen/decor_divider_width"
                android:layout_height="@dimen/decor_divider_height"/>
            <com.android.wm.shell.windowdecor.WindowMenuItemView
                android:id="@+id/window_pin_window"
                android:padding="@dimen/decor_button_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sec_decor_button_window_pin_desktop"
                android:contentDescription="@string/sec_decor_button_text_window_pin"
                app:hasIconBackground="true"/>
            <com.android.wm.shell.windowdecor.WindowMenuItemView
                android:id="@+id/split_window"
                android:padding="@dimen/decor_button_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sec_decor_button_split_leftright"
                android:contentDescription="@string/sec_decor_button_text_split"/>
            <com.android.wm.shell.windowdecor.WindowMenuItemView
                android:id="@+id/opacity_window"
                android:padding="@dimen/decor_button_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sec_decor_button_opacity"
                android:contentDescription="@string/sec_decor_button_text_opacity"/>
            <com.android.wm.shell.windowdecor.WindowMenuItemView
                android:id="@+id/minimize_window"
                android:padding="@dimen/decor_button_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sec_decor_button_minimize_desktop"
                android:contentDescription="@string/sec_decor_button_text_minimize"/>
            <com.android.wm.shell.windowdecor.WindowMenuItemView
                android:id="@+id/maximize_window"
                android:padding="@dimen/decor_button_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sec_decor_button_maximize"
                android:contentDescription="@string/sec_decor_button_text_maximize"/>
            <com.android.wm.shell.windowdecor.WindowMenuItemView
                android:id="@+id/close_window"
                android:padding="@dimen/decor_button_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sec_decor_button_close"
                android:contentDescription="@string/sec_decor_button_text_close"
                android:paddingEnd="@dimen/decor_button_padding_large"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/slider_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.wm.shell.windowdecor.WindowDecorSlider
                android:layout_gravity="center"
                android:id="@+id/slider"
                android:layout_width="220dp"
                android:layout_height="@dimen/sec_decor_button_size"
                android:contentDescription="@string/sec_decor_button_text_opacity"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"/>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
