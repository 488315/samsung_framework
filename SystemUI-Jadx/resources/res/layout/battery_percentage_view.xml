<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.phone.SwitchableDoubleShadowTextView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:textAppearance="@style/TextAppearance.StatusBar.Clock"
    android:textColor="?android:attr/textColorPrimary"
    android:gravity="start|center_vertical"
    android:id="@+id/battery_percentage_view"
    android:paddingTop="@dimen/status_text_view_padding_top"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:singleLine="true"
    android:includeFontPadding="false"
    android:importantForAccessibility="no"
    android:paddingStart="@dimen/battery_level_padding_start"
    app:ambientShadowAlpha="0"
    app:ambientShadowBlur="@dimen/shadow_radius"
    app:ambientShadowOffsetX="@dimen/shadow_difference"
    app:ambientShadowOffsetY="@dimen/shadow_difference"
    app:keyShadowAlpha="0.2"
    app:keyShadowBlur="@dimen/shadow_radius"
    app:keyShadowOffsetX="@dimen/shadow_difference"
    app:keyShadowOffsetY="@dimen/shadow_difference"/>
