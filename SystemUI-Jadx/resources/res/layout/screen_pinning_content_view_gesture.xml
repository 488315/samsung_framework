<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/screen_pinning_request_padding_dialog"
    android:paddingRight="@dimen/screen_pinning_request_padding_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/pinning_desc_optional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_pinning_msg_in_gesture"
                    android:lineSpacingExtra="4sp"
                    android:fontFamily="sec"
                    android:textFontWeight="400"
                    style="?android:attr/textAppearance"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
