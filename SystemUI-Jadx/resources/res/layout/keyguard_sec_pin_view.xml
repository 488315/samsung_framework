<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.KeyguardSecPINView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:androidprv="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/keyguard_pin_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:id="@+id/bottom_container"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="true">
            <LinearLayout
                android:id="@+id/split_touch_top_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/message_area"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/kg_pin_message_area_margin_bottom">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/message_container"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/kg_security_input_box_margin_bottom">
                        <include layout="@layout/keyguard_prev_info_message"/>
                        <include layout="@layout/keyguard_prev_forgot_password"/>
                        <include layout="@layout/keyguard_hint_message_area"/>
                        <include
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            layout="@layout/keyguard_sec_bouncer_message_area"/>
                        <include
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/kg_sub_message_margin_top"
                            layout="@layout/keyguard_sub_message_area"/>
                    </LinearLayout>
                    <com.android.keyguard.AlphaOptimizedRelativeLayout
                        android:gravity="bottom"
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/password_entry_box"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/kg_security_input_box_height"
                        android:layoutDirection="ltr">
                        <com.android.keyguard.SecPasswordTextView
                            android:textAppearance="@style/TextAppearance.passwordEntry"
                            android:id="@+id/pinEntry"
                            android:padding="1dp"
                            android:nextFocusDown="@+id/pinEntry"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:maxLength="@dimen/kg_password_password_entry_max_length"
                            android:layout_centerHorizontal="true"
                            androidprv:originColor="origin_pin_digit_text_color"
                            androidprv:scaledTextSize="28"
                            androidprv:themeBlackColor="theme_pin_text_color_black"
                            androidprv:themeColor="theme_pin_text_color"
                            androidprv:themePolicyIgnorable="true"
                            androidprv:whitebgColor="whitebg_keyguard_text_color"/>
                    </com.android.keyguard.AlphaOptimizedRelativeLayout>
                </FrameLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:id="@+id/emergency_button_container_flex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.android.keyguard.EmergencyButton
                        android:ellipsize="end"
                        android:id="@+id/emergency_call_button_flex"
                        android:paddingLeft="@dimen/keyguard_emergency_button_inner_padding"
                        android:paddingTop="@dimen/kg_emergency_button_padding"
                        android:paddingRight="@dimen/keyguard_emergency_button_inner_padding"
                        android:paddingBottom="@dimen/kg_emergency_button_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/keyguard_bottom_area_emergency_button_area_min_height"
                        android:layout_marginTop="@dimen/kg_table_mode_pin_eca_margin_top"
                        android:text="@string/kg_lockscreen_emergency_call_button_text"
                        android:maxLines="1"
                        androidprv:originBackground="origin_transparent_ripple_drawable"
                        androidprv:originColor="origin_keyguard_message_area_text_color"
                        androidprv:whitebgBackground="whitebg_transparent_ripple_drawable"
                        androidprv:whitebgColor="whitebg_keyguard_text_color"
                        style="@style/keyguard_emergency_button_style"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:id="@+id/input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:splitMotionEvents="true">
                    <FrameLayout
                        android:id="@+id/split_touch_bottom_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="bottom|center_horizontal"
                            android:orientation="vertical"
                            android:id="@+id/container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/kg_pin_container_margin_bottom"
                            android:layoutDirection="ltr">
                            <LinearLayout
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:id="@+id/row1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="@dimen/num_pad_bottom_margin"
                                android:layout_weight="1">
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key1"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    androidprv:digit="1"
                                    androidprv:textView="@+id/pinEntry"/>
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key2"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    android:layout_marginLeft="@dimen/num_pad_side_margin"
                                    android:layout_marginRight="@dimen/num_pad_side_margin"
                                    androidprv:digit="2"
                                    androidprv:textView="@+id/pinEntry"/>
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key3"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    androidprv:digit="3"
                                    androidprv:textView="@+id/pinEntry"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:id="@+id/row2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="@dimen/num_pad_bottom_margin"
                                android:layout_weight="1">
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key4"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    androidprv:digit="4"
                                    androidprv:textView="@+id/pinEntry"/>
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key5"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    android:layout_marginLeft="@dimen/num_pad_side_margin"
                                    android:layout_marginRight="@dimen/num_pad_side_margin"
                                    androidprv:digit="5"
                                    androidprv:textView="@+id/pinEntry"/>
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key6"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    androidprv:digit="6"
                                    androidprv:textView="@+id/pinEntry"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:id="@+id/row3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="@dimen/num_pad_bottom_margin"
                                android:layout_weight="1">
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key7"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    androidprv:digit="7"
                                    androidprv:textView="@+id/pinEntry"/>
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key8"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    android:layout_marginLeft="@dimen/num_pad_side_margin"
                                    android:layout_marginRight="@dimen/num_pad_side_margin"
                                    androidprv:digit="8"
                                    androidprv:textView="@+id/pinEntry"/>
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key9"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    androidprv:digit="9"
                                    androidprv:textView="@+id/pinEntry"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:id="@+id/row4"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">
                                <com.android.keyguard.NumPadButton
                                    android:gravity="center_vertical"
                                    android:id="@+id/delete_button"
                                    android:background="@drawable/ripple_drawable"
                                    android:clickable="true"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    android:src="@drawable/pin_lock_btn_back"
                                    android:scaleType="center"
                                    android:contentDescription="@string/kg_keycode_delete"
                                    androidprv:originImage="origin_pin_lock_btn_back"
                                    androidprv:themeBlackColor="theme_pin_digit_text_color_black"
                                    androidprv:themeBlackImage="pin_lock_btn_back_black"
                                    androidprv:themeColor="theme_pin_digit_text_color"
                                    androidprv:themeImage="pin_lock_btn_back"
                                    androidprv:themePolicyIgnorable="true"
                                    androidprv:whitebgImage="whitebg_pin_lock_btn_back"/>
                                <com.android.keyguard.SecNumPadKey
                                    android:id="@+id/key0"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    android:layout_marginLeft="@dimen/num_pad_side_margin"
                                    android:layout_marginRight="@dimen/num_pad_side_margin"
                                    androidprv:digit="0"
                                    androidprv:textView="@+id/pinEntry"/>
                                <com.android.systemui.widget.SystemUITextView
                                    android:gravity="center"
                                    android:id="@+id/key_enter_text"
                                    android:background="@drawable/ripple_drawable"
                                    android:focusable="true"
                                    android:visibility="gone"
                                    android:clickable="true"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    android:text="@string/theme_pin_enter_text"
                                    android:contentDescription="@string/kg_keycode_ok"
                                    androidprv:originColor="origin_pin_digit_text_color"
                                    androidprv:themeBlackColor="theme_pin_digit_text_color_black"
                                    androidprv:themeColor="theme_pin_digit_text_color"
                                    androidprv:themePolicyIgnorable="true"
                                    androidprv:wallpaperColorIgnorable="true"
                                    androidprv:whitebgColor="whitebg_keyguard_text_color"
                                    style="@style/Ok_theme"/>
                                <com.android.keyguard.NumPadButton
                                    android:gravity="center_vertical"
                                    android:id="@+id/key_enter"
                                    android:background="@drawable/ripple_drawable"
                                    android:visibility="gone"
                                    android:layout_width="@dimen/num_pad_size"
                                    android:layout_height="@dimen/num_pad_size"
                                    android:src="@drawable/ic_done_wht"
                                    android:scaleType="fitCenter"
                                    android:contentDescription="@string/kg_keycode_ok"
                                    androidprv:themeBlackImage="ic_done_wht_black"
                                    androidprv:themeImage="ic_done_wht"
                                    androidprv:themePolicyIgnorable="true"/>
                            </LinearLayout>
                        </LinearLayout>
                        <include
                            android:gravity="center"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/keyguard_selector_fade_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/kg_pin_eca_margin_bottom"
                            layout="@layout/keyguard_emergency_button"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.android.keyguard.KeyguardSecPINView>
