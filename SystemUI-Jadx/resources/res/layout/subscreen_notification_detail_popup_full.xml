<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subscreen_notification_full_popup_frame"
    android:background="@android:color/black"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/two_phone_icon"
            android:visibility="gone"
            android:layout_width="@dimen/subscreen_noti_two_phone_icon_width"
            android:layout_height="@dimen/subscreen_noti_two_phone_icon_height"
            android:tint="@color/subscreen_notification_two_phone_icon_tint_color"
            android:layout_marginStart="@dimen/subscreen_noti_extra_icon_margin"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/secure_icon"
            android:visibility="gone"
            android:layout_width="@dimen/subscreen_noti_secure_icon_size"
            android:layout_height="@dimen/subscreen_noti_secure_icon_size"
            android:layout_marginStart="@dimen/subscreen_noti_extra_icon_margin"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/subscreen_noti_full_popup_icon_size"
            android:layout_height="@dimen/subscreen_noti_full_popup_icon_size">
            <ImageView
                android:id="@+id/subscreen_notification_header_app_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/subscreen_notification_header_icon"
                android:background="@drawable/subscreen_notification_icon_circle"
                android:padding="@dimen/subscreen_noti_full_popup_icon_circle_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/subscreen_notification_header_icon_conversation"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_gravity="end|bottom"
                android:id="@+id/subscreen_notification_sub_icon"
                android:visibility="gone"
                android:layout_width="@dimen/subscreen_noti_full_popup_sub_icon_size"
                android:layout_height="@dimen/subscreen_noti_full_popup_sub_icon_size"
                android:antialias="true"
                android:adjustViewBounds="true"/>
        </FrameLayout>
        <TextView
            android:textSize="@dimen/subscreen_noti_full_popup_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/subscreen_notification_text_color"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:id="@+id/subscreen_notification_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            android:fontFamily="sec-roboto-light"
            android:layout_marginHorizontal="@dimen/subscreen_noti_full_popup_text_horizontal_margin"/>
        <TextView
            android:textSize="@dimen/subscreen_noti_full_popup_content_text_size"
            android:textColor="@color/subscreen_notification_text_color"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:id="@+id/subscreen_notification_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:fontFamily="roboto-regular"
            android:layout_marginHorizontal="@dimen/subscreen_noti_full_popup_text_horizontal_margin"/>
    </LinearLayout>
</FrameLayout>
