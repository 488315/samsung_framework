<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.animation.view.LaunchableLinearLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/keyguard_settings_popup_menu_background"
    android:padding="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/keyguard_affordance_fixed_height">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="?android:^attr-private/pointerIconContextMenu"
        android:importantForAccessibility="no"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp"
        android:textColor="?android:^attr-private/pointerIconContextMenu"
        android:ellipsize="end"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
</com.android.systemui.animation.view.LaunchableLinearLayout>
