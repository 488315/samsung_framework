<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.SystemUI.Dialog.Alert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="?android:attr/textColorAlertDialogListItem"
            android:id="@+id/airplane_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checkbox_popup_text_top_margin"
            android:layout_marginBottom="@dimen/checkbox_popup_text_top_margin"
            android:layout_marginStart="@dimen/checkbox_popup_text_margin"
            android:layout_marginEnd="@dimen/checkbox_popup_text_margin"
            style="?android:attr/textAppearance"/>
        <CheckBox
            android:textSize="14sp"
            android:textColor="?android:attr/textColorAlertDialogListItem"
            android:id="@+id/airplane_message_checkbox"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/warning_alert_check"
            android:fontFamily="sec-roboto-light"
            android:paddingStart="5dp"
            android:layout_marginStart="@dimen/checkbox_popup_checkbox_margin"
            style="?android:attr/textAppearance"/>
    </LinearLayout>
</ScrollView>
