<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.notification.row.SecNotificationSnooze xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@android:style/Theme.DeviceDefault.Light"
    android:orientation="vertical"
    android:id="@+id/notification_snooze"
    android:background="@color/sec_notification_guts_header_bg_color"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@android:dimen/timepicker_separator_padding"
    android:paddingEnd="@android:dimen/timepicker_separator_padding">&gt; 
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/header"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notification_guts_info_header_margin_top"
        android:layout_marginBottom="@dimen/notification_guts_info_header_margin_bottom">
        <ImageView
            android:id="@+id/snooze_header_icon"
            android:layout_width="@dimen/notification_guts_info_header_icon"
            android:layout_height="@dimen/notification_guts_info_header_icon"
            android:src="@drawable/quickpanel_ic_snooze"
            android:layout_marginEnd="6dp"/>
        <TextView
            android:textAppearance="@style/TextAppearance.NotificationGuts.Header"
            android:id="@+id/snooze_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/snooze_title"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:id="@+id/header_divider"
        android:background="@color/notification_guts_button_divider_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textAppearance="@style/TextAppearance.NotificationGuts.Guide"
        android:id="@+id/snooze_guide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/snooze_notification_guide_text"
        android:includeFontPadding="true"/>
    <RadioGroup
        android:orientation="vertical"
        android:id="@+id/snooze_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="-6dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/notification_guts_button_divider"
        android:showDividers="middle">
        <TextView
            android:id="@+id/snooze_cancel"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="1"
            style="@style/TextAppearance.NotificationGuts.SecButton"/>
        <TextView
            android:id="@+id/snooze_save"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_save"
            android:layout_weight="1"
            style="@style/TextAppearance.NotificationGuts.SecButton"/>
    </LinearLayout>
</com.android.systemui.statusbar.notification.row.SecNotificationSnooze>
