<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.KeyguardArrowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="top"
    android:id="@+id/keyguard_arrow_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="bottom|left"
        android:id="@+id/left_arrow_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.android.systemui.widget.SystemUIImageView
            android:layout_gravity="center"
            android:id="@+id/left_arrow"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="@dimen/kg_arrow_view_size"
            android:layout_height="@dimen/kg_arrow_view_size"
            android:src="@drawable/lock_bouncer_btn_left_mtrl"
            android:scaleType="center"
            android:contentDescription="@string/kg_arrow_left"/>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="bottom|right"
        android:id="@+id/right_arrow_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.android.systemui.widget.SystemUIImageView
            android:layout_gravity="center"
            android:id="@+id/right_arrow"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="@dimen/kg_arrow_view_size"
            android:layout_height="@dimen/kg_arrow_view_size"
            android:src="@drawable/lock_bouncer_btn_right_mtrl"
            android:scaleType="center"
            android:contentDescription="@string/kg_arrow_right"/>
    </FrameLayout>
</com.android.keyguard.KeyguardArrowView>
