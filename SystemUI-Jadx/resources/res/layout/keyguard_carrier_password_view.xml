<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.KeyguardCarrierPasswordView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sysui="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/keyguard_carrierlock_password_view"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Space
        android:layout_width="match_parent"
        android:layout_height="230dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kg_password_message_area_margin_bottom"
            layout="@layout/keyguard_sec_bouncer_message_area"/>
        <LinearLayout
            android:theme="@style/PasswordTheme"
            android:layout_gravity="center_horizontal"
            android:id="@+id/input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.keyguard.AlphaOptimizedRelativeLayout
                android:id="@+id/password_entry_box"
                android:background="@drawable/keyguard_security_input_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kg_security_input_box_height"
                android:layout_marginLeft="@dimen/kg_security_input_box_side_margin"
                android:layout_marginRight="@dimen/kg_security_input_box_side_margin"
                android:layout_centerInParent="true">
                <com.android.systemui.widget.SystemUIEditText
                    android:theme="@style/passwordEntry_default_light"
                    android:gravity="center"
                    android:id="@+id/passwordEntry"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:privateImeOptions="inputType=option;disableLiveMessage=true"
                    android:imeOptions="flagForceAscii|actionDone"
                    sysui:originColor="origin_pin_text_color"
                    sysui:themeBlackColor="theme_pin_text_color_white"
                    sysui:themeColor="theme_pin_text_color"
                    sysui:whitebgColor="whitebg_keyguard_text_color"/>
            </com.android.keyguard.AlphaOptimizedRelativeLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</com.android.keyguard.KeyguardCarrierPasswordView>
