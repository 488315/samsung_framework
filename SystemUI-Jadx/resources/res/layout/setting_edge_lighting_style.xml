<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_root_layout"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/main_rounded_root"
        android:background="@color/settings_edge_lighting_style_sub_option_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_edge_lighting_style_effect_option_layout_height_total"
        android:layout_marginBottom="@dimen/settings_edge_lighting_style_root_view_bottom_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/action_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_edge_lighting_style_action_bar_button_height"
            android:layout_marginBottom="@dimen/settings_edge_lighting_style_action_bar_button_bottom_margin"
            android:weightSum="1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/settings_edge_lighting_style_action_bar_button_side_margin"
            android:layout_marginEnd="@dimen/settings_edge_lighting_style_action_bar_button_side_margin">
            <Button
                android:textSize="@dimen/settings_edge_lighting_style_action_bar_button_title_text_size"
                android:textColor="@color/settings_edge_lighting_style_action_bar_button_text_color"
                android:id="@+id/style_cancel_btn"
                android:background="@drawable/ripple_background_grid"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="@dimen/settings_edge_lighting_style_action_bar_button_height"
                android:text="@string/cancel"
                android:maxLines="1"
                android:layout_weight="0.5"
                android:textAllCaps="false"
                android:fontFamily="sec"
                android:textFontWeight="600"/>
            <View
                android:layout_gravity="center"
                android:background="#47474a"
                android:layout_width="@dimen/settings_edge_lighting_style_action_bar_button_divider_width"
                android:layout_height="@dimen/settings_edge_lighting_style_action_bar_button_divider_height"/>
            <Button
                android:textSize="@dimen/settings_edge_lighting_style_action_bar_button_title_text_size"
                android:textColor="@color/settings_edge_style_apply_text_color_selector"
                android:id="@+id/style_apply_btn"
                android:background="@drawable/ripple_background_grid"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="@dimen/settings_edge_lighting_style_action_bar_button_height"
                android:text="@string/done"
                android:maxLines="1"
                android:layout_weight="0.5"
                android:textAllCaps="false"
                android:fontFamily="sec"
                android:textFontWeight="600"/>
        </LinearLayout>
        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:id="@+id/option_main_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_edge_lighting_style_effect_option_layout_height_except_bottom_bar"
            android:layout_above="@+id/action_bar_layout">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                style="@style/TabLayoutStyle">
                <com.google.android.material.tabs.TabItem
                    android:tag="@string/edge_lighting_style_effect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edge_lighting_style_effect"/>
                <com.google.android.material.tabs.TabItem
                    android:tag="@string/edge_lighting_style_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edge_lighting_style_color"/>
                <com.google.android.material.tabs.TabItem
                    android:tag="@string/edge_lighting_style_advanced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edge_lighting_style_advanced"/>
            </com.google.android.material.tabs.TabLayout>
            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/style_sub_option_detail_layout"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_edge_lighting_style_effect_option_layout_height_except_all">
                    <HorizontalScrollView
                        android:id="@+id/sub_option_effect_list_view"
                        android:paddingTop="@dimen/settings_edge_lighting_style_effect_list_margin"
                        android:focusable="false"
                        android:scrollbars="none"
                        android:clipToPadding="false"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_edge_lighting_style_effect_option_layout_height_except_all"
                        android:paddingStart="@dimen/settings_edge_lighting_style_option_effect_start_end_padding"
                        android:paddingEnd="@dimen/settings_edge_lighting_style_option_effect_start_end_padding">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <GridView
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/sub_option_effect_grid_view"
                                android:descendantFocusability="afterDescendants"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:horizontalSpacing="@dimen/settings_edge_lighting_style_effect_option_grid_horizontal_space"
                                android:verticalSpacing="@dimen/settings_edge_lighting_style_effect_option_grid_vertical_space"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/sub_option_color_layout"
                        android:focusable="false"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_edge_lighting_style_effect_option_layout_height_except_all">
                        <HorizontalScrollView
                            android:id="@+id/sub_option_color_scroll_view"
                            android:scrollbars="none"
                            android:clipToPadding="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="@dimen/settings_edge_lighting_style_color_option_custom_color_margin_start"
                            android:paddingEnd="@dimen/settings_edge_lighting_style_color_option_custom_color_margin_end">
                            <LinearLayout
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical"
                                android:id="@+id/color_tab_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <RadioButton
                                    android:textSize="17sp"
                                    android:id="@+id/auto_radio_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/edge_lighting_style_tap_color_auto"
                                    android:fontFamily="sec"
                                    android:paddingStart="18dp"/>
                                <RadioButton
                                    android:textSize="17sp"
                                    android:id="@+id/color_radio_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/edge_lighting_style_tap_color_color"
                                    android:fontFamily="sec"
                                    android:paddingStart="18dp"/>
                                <GridView
                                    android:id="@+id/sub_option_color_grid_view"
                                    android:descendantFocusability="afterDescendants"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/settings_edge_lighting_style_color_option_grid_view_height"
                                    android:layout_marginTop="20dp"
                                    android:horizontalSpacing="@dimen/settings__style_color_option_grid_horizontal_space_no_phone_color"
                                    android:verticalSpacing="@dimen/settings_edge_lighting_style_color_option_grid_vertical_space"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:id="@+id/sub_option_advanced_layout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3"
                        android:layout_centerVertical="true">
                        <include
                            android:id="@+id/transparency_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            layout="@layout/settings_edge_lighting_style_seek_bar_layout"/>
                        <include
                            android:id="@+id/width_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            layout="@layout/settings_edge_lighting_style_seek_bar_layout"/>
                        <include
                            android:id="@+id/duration_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            layout="@layout/settings_edge_lighting_style_seek_bar_layout"/>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
