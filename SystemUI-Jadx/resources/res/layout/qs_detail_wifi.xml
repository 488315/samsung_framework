<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.AlphaOptimizedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/qs_detail_padding_start"
    android:paddingEnd="@dimen/qs_detail_padding_start">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/current_network"
        android:paddingBottom="@dimen/sec_qs_detail_content_top_margin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.QS.DetailItemHeader"
                android:gravity="center"
                android:id="@+id/connected_networks_title"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_settings_wifi_detail_current_network_title"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/hotspot_live_networks"
        android:paddingBottom="@dimen/sec_qs_detail_content_top_margin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.QS.DetailItemHeader"
                android:gravity="center"
                android:id="@+id/hotspot_live_networks_title"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sec_wifi_hotspot_live_preference_category_title"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/available_networks"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/available_networks_group"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.QS.DetailItemHeader"
                android:gravity="center"
                android:id="@+id/available_networks_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_settings_wifi_detail_available_networks_title"/>
        </LinearLayout>
    </LinearLayout>
</com.android.keyguard.AlphaOptimizedLinearLayout>
