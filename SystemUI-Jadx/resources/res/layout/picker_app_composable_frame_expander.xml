<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <View
        android:layout_gravity="center_vertical"
        android:id="@+id/switch_divider_widget"
        android:background="?attr/listDividerColor"
        android:visibility="gone"
        android:layout_width="@dimen/picker_app_list_actionbutton_divider_width"
        android:layout_height="@dimen/picker_app_list_actionbutton_divider_height"/>
    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/image_button"
        android:background="@drawable/picker_app_expander_button_selector"
        android:layout_width="32dp"
        android:layout_height="32dp"/>
</LinearLayout>
