<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:id="@+id/sub_display_volume_view"
    android:background="#000000"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">
    <ImageButton
        android:id="@+id/sub_display_dual_volume_arrow_left"
        android:background="@null"
        android:visibility="gone"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/bt_fc_volume_dual_previous"
        android:tint="#fafafa"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <FrameLayout
        android:id="@+id/sub_display_volume_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/sub_display_dual_volume_arrow_right"
        android:layout_toEndOf="@+id/sub_display_dual_volume_arrow_left"/>
    <ImageButton
        android:id="@+id/sub_display_dual_volume_arrow_right"
        android:background="@null"
        android:visibility="gone"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/bt_fc_volume_dual_next"
        android:tint="#fafafa"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textSize="27sp"
        android:textColor="#fafafa"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/sub_display_volume_warning_toast_view"
        android:background="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/sub_display_volume_warning_toast_text"
        android:maxLines="2"
        android:layout_centerInParent="true"
        android:lineSpacingExtra="4dp"
        android:fontFamily="sec-roboto-regular"
        android:textAlignment="center"
        android:paddingHorizontal="12dp"/>
</RelativeLayout>
