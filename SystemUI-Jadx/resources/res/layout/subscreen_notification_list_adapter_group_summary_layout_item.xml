<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:maxWidth="389dp"
    android:layout_marginEnd="@dimen/subscreen_noti_layout_margin_end">
    <TextView
        android:textSize="@dimen/subscreen_noti_list_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/subscreen_notification_text_color"
        android:ellipsize="end"
        android:id="@+id/group_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:maxLines="1"
        android:fontFamily="sec-roboto-light"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:textSize="@dimen/subscreen_noti_list_title_text_size"
        android:textColor="@color/subscreen_notification_content_text_color"
        android:ellipsize="end"
        android:layout_gravity="end"
        android:id="@+id/group_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="roboto-regular"/>
</LinearLayout>
