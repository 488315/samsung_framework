<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.biometrics.ui.CredentialPatternView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="?attr/lockPatternStyle"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/biometric_dialog_elevation">
    <RelativeLayout
        android:id="@+id/auth_credential_header"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="?attr/headerStyle">
        <ImageView
            android:id="@+id/icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            style="?attr/headerIconStyle"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            style="?attr/titleTextAppearance"/>
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            style="?attr/subTitleTextAppearance"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_alignParentLeft="true"
            style="?attr/descriptionTextAppearance"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="?attr/containerStyle">
        <com.android.internal.widget.LockPatternView
            android:layout_gravity="center"
            android:id="@+id/lockPattern"
            android:layout_width="@dimen/biometric_auth_pattern_view_size"
            android:layout_height="@dimen/biometric_auth_pattern_view_size"/>
        <TextView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/errorTextAppearance"/>
    </FrameLayout>
</com.android.systemui.biometrics.ui.CredentialPatternView>
