<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top|center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/touchpad_media_panel_left_margin"
        android:layout_marginEnd="@dimen/touchpad_media_panel_right_margin">
        <ImageView
            android:id="@+id/media_image_view"
            android:background="@drawable/media_panel_image_background"
            android:layout_width="@dimen/touchpad_media_panel_image_width"
            android:layout_height="@dimen/touchpad_media_panel_image_height"
            android:contentDescription="@string/cover_art"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/media_text_left_margin_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/touchpad_media_panel_artist_text_size"
            android:textColor="@color/touchpad_media_panel_artist_text_color"
            android:id="@+id/artist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:text=""
            android:singleLine="true"
            android:textAlignment="viewStart"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/media_text_middle_margin_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/touchpad_media_panel_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/touchpad_media_panel_title_text_color"
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text=""
            android:singleLine="true"
            android:textAlignment="viewStart"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/media_text_right_margin_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ltr_part"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/action_skip_previous"
                    android:background="@drawable/icon_background"
                    android:layout_width="@dimen/touchpad_media_panel_prev_next_icon_size"
                    android:layout_height="@dimen/touchpad_media_panel_prev_next_icon_size"
                    android:contentDescription="@string/action_skip_previous">
                    <ImageView
                        android:id="@+id/prev_image"
                        android:focusable="false"
                        android:layout_width="@dimen/touchpad_media_panel_prev_next_icon_size"
                        android:layout_height="@dimen/touchpad_media_panel_prev_next_icon_size"
                        android:src="@drawable/ic_prev_small"
                        android:tint="@color/seekbar_color_expand"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/media_button_left_margin_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/action_resume"
                    android:background="@drawable/icon_background"
                    android:layout_width="@dimen/touchpad_media_panel_play_pause_icon_size"
                    android:layout_height="@dimen/touchpad_media_panel_play_pause_icon_size"
                    android:contentDescription="@string/action_resume">
                    <ImageView
                        android:id="@+id/resume_image"
                        android:focusable="false"
                        android:layout_width="@dimen/touchpad_media_panel_play_pause_icon_size"
                        android:layout_height="@dimen/touchpad_media_panel_play_pause_icon_size"
                        android:src="@drawable/ic_play_circle"
                        android:tint="@color/seekbar_color_expand"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/action_pause"
                    android:background="@drawable/icon_background"
                    android:visibility="gone"
                    android:layout_width="@dimen/touchpad_media_panel_play_pause_icon_size"
                    android:layout_height="@dimen/touchpad_media_panel_play_pause_icon_size"
                    android:contentDescription="@string/action_pause">
                    <ImageView
                        android:id="@+id/pause_image"
                        android:focusable="false"
                        android:layout_width="@dimen/touchpad_media_panel_play_pause_icon_size"
                        android:layout_height="@dimen/touchpad_media_panel_play_pause_icon_size"
                        android:src="@drawable/ic_pause_circle"
                        android:tint="@color/seekbar_color_expand"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/media_button_right_margin_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/action_skip_next"
                    android:background="@drawable/icon_background"
                    android:layout_width="@dimen/touchpad_media_panel_prev_next_icon_size"
                    android:layout_height="@dimen/touchpad_media_panel_prev_next_icon_size"
                    android:contentDescription="@string/action_skip_next">
                    <ImageView
                        android:id="@+id/skip_image"
                        android:focusable="false"
                        android:layout_width="@dimen/touchpad_media_panel_prev_next_icon_size"
                        android:layout_height="@dimen/touchpad_media_panel_prev_next_icon_size"
                        android:src="@drawable/ic_next_small"
                        android:tint="@color/seekbar_color_expand"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
