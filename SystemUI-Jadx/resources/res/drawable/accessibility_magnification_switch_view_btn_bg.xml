<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/accessibility_magnifier_bg"/>
            <size
                android:height="56dp"
                android:width="56dp"/>
            <corners android:radius="2dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/accessibility_magnifier_bg_stroke"/>
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>
        </shape>
    </item>
</ripple>
