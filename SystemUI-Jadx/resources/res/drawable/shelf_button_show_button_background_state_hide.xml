<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/notification_panel_theme_ripple_color">
    <item>
        <inset
            android:insetLeft="2dp"
            android:insetRight="2dp"
            android:insetTop="8dp">
            <shape>
                <solid android:color="@color/notification_shelf_button_background_fill_color"/>
                <corners android:radius="12dp"/>
                <padding
                    android:left="@dimen/bottom_bar_button_horizontal_padding"
                    android:right="@dimen/bottom_bar_button_horizontal_padding"/>
                <stroke
                    android:width="1dp"
                    android:color="@color/notification_shelf_button_background_stroke_color"/>
            </shape>
        </inset>
    </item>
    <item android:id="@android:id/mask">
        <inset
            android:insetLeft="2dp"
            android:insetRight="2dp"
            android:insetTop="8dp">
            <shape>
                <solid android:color="@android:color/white"/>
                <corners android:radius="12dp"/>
                <padding
                    android:left="@dimen/bottom_bar_button_horizontal_padding"
                    android:right="@dimen/bottom_bar_button_horizontal_padding"/>
                <stroke
                    android:width="1dp"
                    android:color="@color/notification_shelf_button_background_stroke_color"/>
            </shape>
        </inset>
    </item>
</ripple>
