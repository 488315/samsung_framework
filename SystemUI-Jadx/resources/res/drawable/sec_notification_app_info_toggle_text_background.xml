<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/notification_panel_theme_ripple_color">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/sec_notification_guts_app_info_toggle_text_bg"/>
            <corners android:radius="@dimen/notification_panel_background_radius"/>
        </shape>
