<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?android:^attr-private/dotSize"/>
            <stroke
                android:width="@dimen/contrast_dialog_button_stroke_width"
                android:color="?android:^attr-private/colorProgressBackgroundNormal"/>
            <corners android:radius="@dimen/contrast_dialog_button_radius"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item
                android:left="@dimen/contrast_dialog_button_stroke_width"
                android:top="@dimen/contrast_dialog_button_stroke_width"
                android:right="@dimen/contrast_dialog_button_stroke_width"
                android:bottom="@dimen/contrast_dialog_button_stroke_width">
                <shape android:shape="rectangle">
                    <solid android:color="?android:^attr-private/dotSize"/>
                    <corners android:radius="@dimen/contrast_dialog_button_radius"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
