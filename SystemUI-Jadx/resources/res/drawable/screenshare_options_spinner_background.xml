<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" android:paddingMode="stack">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/screenrecord_spinner_background_radius"/>
            <stroke
                android:width="1dp"
                android:color="?android:attr/textColorTertiary"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="end|center_vertical"
        android:height="@dimen/screenrecord_spinner_arrow_size"
        android:width="@dimen/screenrecord_spinner_arrow_size"
        android:drawable="@drawable/ic_ksh_key_down"
        android:end="20dp"/>
</layer-list>
