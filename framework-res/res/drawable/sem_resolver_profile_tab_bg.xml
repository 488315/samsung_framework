<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/sem_profile_tab_selected_background_color"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
    <item android:id="@id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/sem_profile_corner_radius" />
            <solid android:color="@color/sem_profile_tab_selected_background_color" />
        </shape>
    </item>
    <item>
        <selector android:enterFadeDuration="100">
            <item android:state_selected="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/sem_profile_corner_radius" />
                    <solid android:color="@color/sem_profile_tab_unselected_background_color" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/sem_profile_corner_radius" />
                    <solid android:color="@color/sem_profile_tab_selected_background_color" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
