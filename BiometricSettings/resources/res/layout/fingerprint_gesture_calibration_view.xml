<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sem_fingerprint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/sem_biometric_prompt_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:weightSum="1"
        android:layout_marginHorizontal="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <ImageView
            android:id="@+id/help_animation"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/biometric_prompt_title_text_color"
            android:gravity="center"
            android:id="@+id/guide_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:fontFamily="sec-roboto-regular"
            android:paddingHorizontal="24dp"/>
    </LinearLayout>
</FrameLayout>
