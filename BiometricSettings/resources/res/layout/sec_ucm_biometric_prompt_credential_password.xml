<?xml version="1.0" encoding="utf-8"?>
<com.samsung.android.biometrics.app.setting.knox.UCMAuthCredentialPasswordView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/main_view"
        android:background="@drawable/sem_auth_credential_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/auth_credential_main_view_margin_top"
        android:weightSum="2">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/auth_credential_icon_margin_top"/>
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AuthCredentialStyle.Title"/>
                    <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AuthCredentialStyle.SubTitle"/>
                    <TextView
                        android:id="@+id/ucmTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AuthCredentialStyle.SubTitle"/>
                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AuthCredentialStyle.Description"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="top"
            android:orientation="vertical"
            android:id="@+id/edit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/AuthCredentialStyle.Error"/>
                    <FrameLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/auth_credential_lockPassword_margin_horizontal">
                        <ImeAwareEditText
                            android:id="@+id/lockPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/AuthCredentialStyle.PasswordEntry"/>
                        <ImageButton
                            android:id="@+id/btn_password_show"
                            android:layout_width="@dimen/auth_credential_btn_password_show_width"
                            android:layout_height="@dimen/auth_credential_btn_password_show_height"
                            style="@style/AuthCredentialStyle.PasswordShowButton"/>
                    </FrameLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</com.samsung.android.biometrics.app.setting.knox.UCMAuthCredentialPasswordView>
