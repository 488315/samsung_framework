<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/biometrics_common_raised_button_marginBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:layout_alignParentBottom="true">
    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/next_button_area"
        android:padding="0dp"
        android:layout_height="@dimen/biometrics_common_raised_button_height"
        android:layout_margin="0dp"
        android:text="@string/fingerprint_continue_button_text"
        style="@style/SecFingerprintRaisedButtonStyle"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
