<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#16fafafa">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#64fafafa"/>
            <corners android:radius="18dp"/>
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2px"
                android:color="#64fafafa"/>
            <corners android:radius="18dp"/>
            <gradient
                android:startColor="#16fafafa"
                android:endColor="#16fafafa"
                android:angle="0"
                android:centerColor="#16fafafa"/>
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>
        </shape>
    </item>
</ripple>
