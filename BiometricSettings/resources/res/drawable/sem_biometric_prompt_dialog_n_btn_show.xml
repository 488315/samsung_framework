<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape>
            <corners android:radius="@dimen/borderless_button_radius"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <item>
        <inset
            android:insetTop="@dimen/noti_setting_and_clear_show_button_bg_inset"
            android:insetBottom="@dimen/noti_setting_and_clear_show_button_bg_inset">
            <shape android:shape="rectangle">
                <corners android:radius="2dp"/>
                <solid android:color="@color/show_button_background_stroke_color"/>
                <stroke
                    android:width="2px"
                    android:color="@color/show_button_background_stroke_color"/>
            </shape>
        </inset>
    </item>
</ripple>
